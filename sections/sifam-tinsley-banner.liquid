{% comment %}
  Section: Sifam Tinsley Banner
  - A three-column section with a title and two linked brand logos.
{% endcomment %}

{%- style -%}
  .st-banner__{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .st-banner__flex-wrapper {
    display: flex;
    align-items: center;
    gap: 2rem;
  }

  /* --- Column 1: Title --- */
  .st-banner__title-column {
    flex: 1;
    text-align: left;
  }

  .st-banner__title {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0;
    line-height: 1.2;
  }

  /* --- Columns 2 & 3: Brands --- */
  .st-banner__brands-column {
    flex: 2;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
  }

  .brand-item {
    background-color: #fff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
  }

  .brand-item--link:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 30px rgba(0, 0, 0, 0.1);
  }

  .brand-item__image {
    width: 100%;
    height: 100%;
    object-fit: contain; /* Prevents logos from stretching */
    max-height: 100px; /* Adjust max height of logos */
  }

  /* --- Responsiveness --- */
  @media screen and (max-width: 768px) {
    .st-banner__flex-wrapper {
      flex-direction: column;
      text-align: center;
    }
    .st-banner__brands-column {
      width: 100%; /* Ensure brand columns take full width */
    }
  }
{%- endstyle -%}

<div class="st-banner__{{ section.id }}">
  <div class="page-width">
    <div class="st-banner__flex-wrapper">
      <div class="st-banner__title-column">
        {%- if section.settings.title != blank -%}
          <h2 class="st-banner__title">{{ section.settings.title | escape }}</h2>
        {%- endif -%}
      </div>

      <div class="st-banner__brands-column">
        {% comment %} --- Brand 1 --- {% endcomment %}
        {%- if section.settings.image_1 != blank -%}
          {%- if section.settings.link_1 != blank -%}
            <a href="{{ section.settings.link_1 }}" class="brand-item brand-item--link">
              {{
                section.settings.image_1
                | image_url: width: 400
                | image_tag: loading: 'lazy', class: 'brand-item__image'
              }}
            </a>
          {%- else -%}
            <div class="brand-item">
              {{
                section.settings.image_1
                | image_url: width: 400
                | image_tag: loading: 'lazy', class: 'brand-item__image'
              }}
            </div>
          {%- endif -%}
        {%- endif -%}

        {% comment %} --- Brand 2 --- {% endcomment %}
        {%- if section.settings.image_2 != blank -%}
          {%- if section.settings.link_2 != blank -%}
            <a href="{{ section.settings.link_2 }}" class="brand-item brand-item--link">
              {{
                section.settings.image_2
                | image_url: width: 400
                | image_tag: loading: 'lazy', class: 'brand-item__image'
              }}
            </a>
          {%- else -%}
            <div class="brand-item">
              {{
                section.settings.image_2
                | image_url: width: 400
                | image_tag: loading: 'lazy', class: 'brand-item__image'
              }}
            </div>
          {%- endif -%}
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Sifam Tinsley Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Our Partners"
    },
    {
      "type": "header",
      "content": "Brand 1"
    },
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_1",
      "label": "Link (optional)"
    },
    {
      "type": "header",
      "content": "Brand 2"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image"
    },
    {
      "type": "url",
      "id": "link_2",
      "label": "Link (optional)"
    },
    {
      "type": "header",
      "content": "Section Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Sifam Tinsley Banner"
    }
  ]
}
{% endschema %}
