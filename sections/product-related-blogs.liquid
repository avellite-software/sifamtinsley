{% comment %}
  Section: Product Related Blogs (Grid)
  - Fetches articles from 'custom.related_blogs'.
  - Displays in a responsive grid (3 columns desktop, 1 column mobile).
  - Maintains the 'News Scroller' card styling.
{% endcomment %}

{%- liquid
  assign related_blogs = product.metafields.custom.related_blogs.value
  assign has_related_blogs = false
  if related_blogs != blank and related_blogs.count > 0
    assign has_related_blogs = true
  endif
-%}

{%- if has_related_blogs -%}
  <style>
    /* Section Container */
    .related-blogs-section {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
      background-color: {{ section.settings.background_color }};
    }

    /* Header */
    .related-blogs-header {
      text-align: center;
      margin-bottom: 40px;
    }
    .related-blogs-heading {
      font-size: 28px;
      font-weight: 700;
      color: #1c1c1c;
      margin: 0;
    }

    /* Grid Layout */
    .related-blogs-grid {
      display: grid;
      grid-template-columns: repeat(3, 1fr); /* 3 Columns by default */
      gap: 30px;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }

    /* --- Card Styles (Preserved from previous version) --- */
    .news-card {
      background-color: #fff;
      border-radius: 16px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.07);
      overflow: hidden;
      display: flex;
      flex-direction: column;
      color: #333;
      height: 100%; /* Full height of grid cell */
      transition: transform 0.2s ease, box-shadow 0.2s ease;
    }
    .news-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px rgba(0, 0, 0, 0.12);
    }

    .news-card-image-link {
      display: block;
      aspect-ratio: 16 / 9; /* Fixed aspect ratio for grid consistency */
      overflow: hidden;
    }
    .news-card-image {
      width: 100%;
      height: 100%;
      object-fit: contain;
      transition: transform 0.4s ease;
    }
    .news-card:hover .news-card-image {
      transform: scale(1.05);
    }

    .news-card-content {
      padding: 25px;
      display: flex;
      flex-direction: column;
      flex-grow: 1;
    }

    .news-card-meta {
      font-size: 13px;
      color: #777;
      margin-bottom: 10px;
    }

    .news-card-title {
      font-size: 20px;
      font-weight: 700;
      margin: 0 0 10px;
      color: #1c1c1c;
      line-height: 1.4;
      text-decoration: none;
    }
    .news-card-title a {
      color: inherit;
      text-decoration: none;
    }

    .news-card-excerpt {
      font-size: 15px;
      line-height: 1.6;
      margin: 0 0 20px 0;
      flex-grow: 1;
      color: #555;
    }

    .news-card-read-more {
      display: inline-block;
      padding: 10px 22px;
      background: #c1151b;
      color: #fff;
      border: 1px solid #c1151b;
      border-radius: 4px;
      text-decoration: none;
      font-weight: 500;
      font-size: 16px;
      text-align: center;
      transition: background-color 0.2s;
      align-self: flex-start;
      margin-top: auto; /* Pushes button to bottom */
    }
    .news-card-read-more:hover {
      background: #a10f16;
      color: #fff;
    }

    /* Responsive */
    @media screen and (max-width: 990px) {
      .related-blogs-grid {
        grid-template-columns: repeat(2, 1fr); /* 2 Columns on Tablet */
      }
    }
    @media screen and (max-width: 768px) {
      .related-blogs-grid {
        grid-template-columns: 1fr; /* 1 Column on Mobile */
      }
      .related-blogs-heading {
        font-size: 24px;
      }
    }
  </style>

  <div class="related-blogs-section">
    {%- if section.settings.heading != blank -%}
      <div class="related-blogs-header page-width">
        <h2 class="related-blogs-heading">{{ section.settings.heading | escape }}</h2>
      </div>
    {%- endif -%}

    <div class="related-blogs-grid">
      {%- for article in related_blogs -%}
        <div class="news-card">
          {%- if article.image -%}
            <a href="{{ article.url }}" class="news-card-image-link">
              {{ article.image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'news-card-image' }}
            </a>
          {%- else -%}
            <div class="news-card-image-link">
              {{ 'lifestyle-1' | placeholder_svg_tag: 'placeholder-svg news-card-image' }}
            </div>
          {%- endif -%}

          <div class="news-card-content">
            <div class="news-card-meta">
              {%- if section.settings.show_date -%}
                <span>{{ article.published_at | time_tag: format: 'date' }}</span>
              {%- endif -%}
              {%- if section.settings.show_author and section.settings.show_date %} | {% endif %}
              {%- if section.settings.show_author -%}
                <span>by {{ article.author }}</span>
              {%- endif -%}
            </div>

            <h3 class="news-card-title">
              <a href="{{ article.url }}">{{ article.title }}</a>
            </h3>

            <div class="news-card-excerpt">
              {{ article.excerpt_or_content | strip_html | truncate: 120 }}
            </div>

            <a href="{{ article.url }}" class="news-card-read-more">Read More</a>
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
{%- endif -%}

{% schema %}
{
  "name": "Product Related Blogs",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Related Articles"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Section Background",
      "default": "#f9f9f9"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "label": "Show date",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "label": "Show author",
      "default": false
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Product Related Blogs"
    }
  ]
}
{% endschema %}
