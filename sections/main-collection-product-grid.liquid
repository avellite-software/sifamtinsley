{% comment %}
  V3 - Redesigned Collection Page
  - Images are now square and fill their container.
  - Card heights are consistent via line-clamp on the description.
  - Box shadow has been updated.
  - Added style adjustments for 4-column desktop layouts.
{% endcomment %}

<script src="{{ 'facets.js' | asset_url }}" defer="defer"></script>

{%- style -%}
  /* ==============================================
     SECTION PADDING & LAYOUT
     ============================================== */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .collection-page-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 40px;
  }

  /* ==============================================
     SIDEBAR MENU
     ============================================== */
  .collections-sidebar {
    background-color: #fff;
    padding: 20px;
    border-radius: 8px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    align-self: start;
  }

  .collections-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .collections-sidebar a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 12px;
    display: block;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .collections-sidebar a:hover {
    background-color: #f0f0f0;
  }

  .collections-sidebar a.is-active {
    background-color: #c1151b;
    color: #fff;
  }

  /* ==============================================
     MAIN CONTENT & FILTERS
     ============================================== */
  .collection-main-content {
    width: 100%;
  }

  .collection-filters {
    margin-bottom: 2rem;
  }

  /* ==============================================
     CUSTOM PRODUCT CARD (Based on News Card)
     ============================================== */
  .custom-product-card {
    background-color: #fff;
    border-radius: 16px;
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.08); /* MODIFIED */
    overflow: hidden;
    display: flex;
    flex-direction: column;
    color: #333;
    height: 100%;
  }

  .custom-product-card__image-wrapper {
    display: block;
    position: relative;
    overflow: hidden;
    background-color: #f5f5f5;
  }
  .custom-product-card__image {
    width: 100%;
    aspect-ratio: 1 / 1; /* MODIFIED: Makes the image container square */
    object-fit: cover; /* MODIFIED: Fills the container, cropping instead of letterboxing */
    transition: transform 0.3s ease;
  }
  .custom-product-card:hover .custom-product-card__image {
    transform: scale(1.05);
  }

  .custom-product-card__content {
    padding: 25px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .custom-product-card__title {
    font-size: 20px;
    font-weight: 700;
    margin: 0 0 10px;
    color: #1c1c1c;
    line-height: 1.4;
    text-decoration: none;
  }
  .custom-product-card__title:hover {
    color: #c1151b;
  }

  .custom-product-card__description {
    font-size: 15px;
    line-height: 1.6;
    margin: 0;
    flex-grow: 1;
    color: #555;
    /* MODIFICATION: Truncates text to 4 lines to keep card sizes consistent */
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 4;
    overflow: hidden;
    text-overflow: ellipsis;
  }

  .custom-product-card__buttons {
    margin-top: 20px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }

  .custom-product-card__btn {
    display: inline-block;
    padding: 10px 22px;
    border: 1px solid #c1151b;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 500;
    font-size: 15px;
    text-align: center;
    transition: background-color 0.2s, color 0.2s;
  }

  .btn--solid {
    background: #c1151b;
    color: #fff;
  }
  .btn--solid:hover {
    background: #a10f16;
    border-color: #a10f16;
  }

  .btn--outline {
    background: #fff;
    color: #c1151b;
  }
  .btn--outline:hover {
    background: #f5f5f5;
  }

  /* ==============================================
     RESPONSIVENESS & LAYOUT ADJUSTMENTS
     ============================================== */
  @media screen and (max-width: 990px) {
    .collection-page-layout {
      grid-template-columns: 1fr;
    }
    .collections-sidebar {
      display: none;
    }
  }

  /* MODIFICATION: Adjusts card content for 4-column layouts to prevent cramping */
  @media screen and (min-width: 1200px) {
    .grid--4-col-desktop .custom-product-card__title {
      font-size: 18px;
    }
    .grid--4-col-desktop .custom-product-card__description {
      font-size: 14px;
      -webkit-line-clamp: 3;
    }
    .grid--4-col-desktop .custom-product-card__btn {
      padding: 8px 16px;
      font-size: 14px;
    }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding gradient color-{{ section.settings.color_scheme }}">
  {%- paginate collection.products by section.settings.products_per_page -%}
    <div class="page-width">
      <div class="collection-page-layout">
        <aside class="collections-sidebar">
          <ul>
            {%- for c in collections -%}
              {%- if c.handle == 'all' %}{% continue %}{% endif -%}
              <li>
                <a
                  href="{{ c.url }}"
                  class="{% if c.handle == collection.handle %}is-active{% endif %}"
                  title="View the {{ c.title }} collection"
                >
                  {{ c.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>
        </aside>

        <main class="collection-main-content">
          {%- if section.settings.enable_filtering or section.settings.enable_sorting -%}
            <div class="collection-filters">
              {% render 'facets',
                results: collection,
                enable_filtering: section.settings.enable_filtering,
                enable_sorting: section.settings.enable_sorting,
                filter_type: 'horizontal',
                paginate: paginate
              %}
            </div>
          {%- endif -%}

          <div class="product-grid-container" id="ProductGridContainer">
            {%- if collection.products.size == 0 -%}
              <div class="collection--empty" id="product-grid" data-id="{{ section.id }}">
                <div class="title-wrapper center">
                  <h2 class="title title--primary">
                    {{ 'sections.collection_template.empty' | t }}
                  </h2>
                </div>
              </div>
            {%- else -%}
              <div class="collection">
                <div class="loading-overlay gradient"></div>
                <ul
                  id="product-grid"
                  data-id="{{ section.id }}"
                  class="
                    grid product-grid grid--{{ section.settings.columns_mobile }}-col-tablet-down
                    grid--{{ section.settings.columns_desktop }}-col-desktop
                  "
                >
                  {%- for product in collection.products -%}
                    <li class="grid__item">
                      <div class="custom-product-card">
                        <a href="{{ product.url }}" class="custom-product-card__image-wrapper">
                          {% if product.featured_image %}
                            <img
                              src="{{ product.featured_image | image_url: width: 400 }}"
                              alt="{{ product.featured_image.alt | escape }}"
                              class="custom-product-card__image"
                              width="400"
                              height="400"
                              loading="lazy"
                            >
                          {% else %}
                            {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg custom-product-card__image' }}
                          {% endif %}
                        </a>
                        <div class="custom-product-card__content">
                          <a href="{{ product.url }}" class="custom-product-card__title">{{ product.title }}</a>

                          {%- liquid
                            assign short_desc = product.metafields.custom.short_description.value
                            if short_desc == blank
                              assign short_desc = product.description | strip_html | truncate: 255
                            endif
                          -%}
                          {%- if short_desc != blank -%}
                            <p class="custom-product-card__description">{{ short_desc }}</p>
                          {%- endif -%}

                          <div class="custom-product-card__buttons">
                            <a href="{{ product.url }}" class="custom-product-card__btn btn--solid"> See More </a>

                            {%- assign datasheet = product.metafields.custom.downloads.value | first -%}
                            {%- if datasheet -%}
                              <a
                                href="{{ datasheet | file_url }}"
                                class="custom-product-card__btn btn--outline"
                                target="_blank"
                                rel="noopener"
                              >
                                Download Datasheet
                              </a>
                            {%- endif -%}
                          </div>
                        </div>
                      </div>
                    </li>
                  {%- endfor -%}
                </ul>

                {%- if paginate.pages > 1 -%}
                  {% render 'pagination', paginate: paginate, anchor: '' %}
                {%- endif -%}
              </div>
            {%- endif -%}
          </div>
        </main>
      </div>
    </div>
  {%- endpaginate -%}
</div>

{% schema %}
{
  "name": "t:sections.main-collection-product-grid.name",
  "class": "section",
  "settings": [
    {
      "type": "range",
      "id": "products_per_page",
      "min": 8,
      "max": 36,
      "step": 4,
      "default": 16,
      "label": "t:sections.main-collection-product-grid.settings.products_per_page.label"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "t:sections.main-collection-product-grid.settings.columns_desktop.label"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "default": "2",
      "label": "t:sections.main-collection-product-grid.settings.columns_mobile.label",
      "options": [
        {
          "value": "1",
          "label": "t:sections.main-collection-product-grid.settings.columns_mobile.options__1.label"
        },
        {
          "value": "2",
          "label": "t:sections.main-collection-product-grid.settings.columns_mobile.options__2.label"
        }
      ]
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.all.colors.label",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "t:sections.main-collection-product-grid.settings.header__1.content"
    },
    {
      "type": "checkbox",
      "id": "enable_filtering",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_filtering.label",
      "info": "t:sections.main-collection-product-grid.settings.enable_filtering.info"
    },
    {
      "type": "checkbox",
      "id": "enable_sorting",
      "default": true,
      "label": "t:sections.main-collection-product-grid.settings.enable_sorting.label"
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ]
}
{% endschema %}
