      "label": "Description",
      "default": "<p>Use this form to get in touch with our team.</p>"
    },
    {
      "type": "header",
      "content": "Form Field Labels"
    },
    {
      "type": "text",
      "id": "name_label",
      "label": "Name Label",
      "default": "Name"
    },
    {
      "type": "text",
      "id": "email_label",
      "label": "Email Label",
      "default": "Email Address"
    },
    {
      "type": "text",
      "id": "phone_label",
      "label": "Phone Label",
      "default": "Phone Number"
    },
    {
      "type": "text",
      "id": "company_label",
      "label": "Company Name Label",
      "default": "Company Name"
    },
    {
      "type": "text",
      "id": "terms_label",
      "label": "Terms Checkbox Label",
      "default": "I agree to the terms of use."
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Send Message"
    },
