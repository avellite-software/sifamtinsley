{% comment %}
  Section: Custom Form
  - A customizable form with a placeholder for custom submission logic.
{% endcomment %}

{%- style -%}
  .custom-form-section__{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .custom-form__header {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .custom-form__heading {
    font-size: 2.5rem;
    font-weight: 700;
    margin: 0 0 1rem;
  }
  .custom-form__description {
    font-size: 1.1rem;
    line-height: 1.6;
    max-width: 60ch;
    margin: 0 auto;
  }
  .custom-form__description p {
    margin: 0;
  }

  .custom-form {
    display: grid;
    gap: 1.5rem;
  }

  .custom-form__field {
    display: flex;
    flex-direction: column;
  }

  .custom-form__label {
    font-weight: 600;
    margin-bottom: 0.5rem;
    font-size: 0.9rem;
  }

  .custom-form__input {
    width: 100%;
    padding: 12px 15px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 1rem;
    transition: border-color 0.2s, box-shadow 0.2s;
  }
  .custom-form__input:focus {
    border-color: #c1151b;
    box-shadow: 0 0 0 2px rgba(193, 21, 27, 0.2);
    outline: none;
  }

  .custom-form__terms {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }
  .custom-form__checkbox {
    width: 1.25em;
    height: 1.25em;
  }
  .custom-form__terms-label {
    font-size: 0.9rem;
    color: #555;
  }

  .custom-form__button-wrapper {
    text-align: center;
    margin-top: 1rem;
  }
  .custom-form__submit {
    background-color: #c1151b;
    color: #fff;
    border: none;
    border-radius: 12px; /* As requested */
    padding: 15px 35px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background-color 0.2s;
  }
  .custom-form__submit:hover {
    background-color: #a10f16;
  }
  .custom-form__submit:disabled {
    background-color: #ccc;
    cursor: not-allowed;
  }

  /* Status Messages */
  .form-status-message {
    padding: 1rem;
    border-radius: 4px;
    margin-top: 1rem;
    text-align: center;
  }
  .form-status--success {
    background-color: #dff0d8;
    color: #3c763d;
    border: 1px solid #d6e9c6;
  }
  .form-status--error {
    background-color: #f2dede;
    color: #a94442;
    border: 1px solid #ebccd1;
  }
{%- endstyle -%}

<div class="custom-form-section__{{ section.id }} page-width page-width--narrow">
  <div class="custom-form__header">
    {%- if section.settings.heading != blank -%}
      <h2 class="custom-form__heading">{{ section.settings.heading }}</h2>
    {%- endif -%}
    {%- if section.settings.description != blank -%}
      <div class="custom-form__description rte">{{ section.settings.description }}</div>
    {%- endif -%}
  </div>

  <form id="CustomForm--{{ section.id }}" class="custom-form">
    <div class="custom-form__field">
      <label class="custom-form__label" for="CustomForm-Name-{{ section.id }}">{{ section.settings.name_label }}</label>
      <input type="text" class="custom-form__input" id="CustomForm-Name-{{ section.id }}" name="name" required>
    </div>

    <div class="custom-form__field">
      <label class="custom-form__label" for="CustomForm-Email-{{ section.id }}">
        {{- section.settings.email_label -}}
      </label>
      <input type="email" class="custom-form__input" id="CustomForm-Email-{{ section.id }}" name="email" required>
    </div>

    <div class="custom-form__field">
      <label class="custom-form__label" for="CustomForm-Phone-{{ section.id }}">
        {{- section.settings.phone_label -}}
      </label>
      <input type="tel" class="custom-form__input" id="CustomForm-Phone-{{ section.id }}" name="phone">
    </div>

    <div class="custom-form__field">
      <label class="custom-form__label" for="CustomForm-Company-{{ section.id }}">
        {{- section.settings.company_label -}}
      </label>
      <input type="text" class="custom-form__input" id="CustomForm-Company-{{ section.id }}" name="company">
    </div>

    <div class="custom-form__terms">
      <input type="checkbox" class="custom-form__checkbox" id="CustomForm-Terms-{{ section.id }}" name="terms" required>
      <label class="custom-form__terms-label" for="CustomForm-Terms-{{ section.id }}">
        {{- section.settings.terms_label -}}
      </label>
    </div>

    <div class="custom-form__button-wrapper">
      <button type="submit" class="custom-form__submit">{{ section.settings.button_label }}</button>
    </div>

    <div class="form-status-message" style="display: none;"></div>
  </form>
</div>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const form = document.getElementById('CustomForm--{{ section.id }}');
    const statusMessage = form.querySelector('.form-status-message');

    form.addEventListener('submit', (event) => {
      // Prevent the default browser form submission
      event.preventDefault();

      const submitButton = form.querySelector('button[type="submit"]');
      submitButton.disabled = true; // Disable button to prevent multiple clicks
      submitButton.textContent = 'Sending...';

      // --- START: CUSTOM SUBMISSION LOGIC ---
      // This is where you'll add your code to send the form data.
      // For example, you might use the fetch() API to send it to a
      // third-party service, a serverless function, or another endpoint.

      // 1. Get form data
      const formData = new FormData(form);
      const data = Object.fromEntries(formData.entries());
      console.log('Form data:', data); // For debugging

      // 2. Example: Mock API call with a timeout
      // Replace this with your actual fetch() request.
      setTimeout(() => {
        // This is a MOCK response. Change `isSuccess` to false to test the error state.
        const isSuccess = true;

        if (isSuccess) {
          statusMessage.textContent = 'Thank you! Your message has been sent.';
          statusMessage.className = 'form-status-message form-status--success';
          form.reset(); // Clear the form fields
        } else {
          statusMessage.textContent = 'Sorry, there was an error. Please try again.';
          statusMessage.className = 'form-status-message form-status--error';
        }

        statusMessage.style.display = 'block';
        submitButton.disabled = false;
        submitButton.textContent = '{{ section.settings.button_label | escape }}';
      }, 1500); // Mock 1.5 second delay

      // --- END: CUSTOM SUBMISSION LOGIC ---
    });
  });
</script>

{% schema %}
