{% comment %}
  Section: Main Article (Showreel)
  - Displays the custom showreel video at the top.
  - Styled to match the simplified Main Article layout.
{% endcomment %}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .article-showreel-container {
    max-width: 800px; /* Matches main-article */
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .article-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }

  .article-title {
    font-size: 5.8rem; /* Matches main-article */
    font-weight: 800;
    margin: 0 0 0.5rem;
    line-height: 1.2;
    color: #1c1c1c;
  }

  .article-meta {
    font-size: 0.9rem;
    color: #777;
  }

  /* Video Container */
  .article-media-container {
    position: relative;
    width: 100%;
    margin-bottom: 2.5rem;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1); /* Matches featured image shadow */
  }

  .video-wrapper {
    position: relative;
    padding-bottom: 56.25%; /* 16:9 Aspect Ratio */
    height: 0;
    background: #000;
  }

  .video-wrapper iframe {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }

  .article-image {
    width: 100%;
    height: auto;
    display: block;
  }

  /* Article Content */
  .article-content {
    font-size: 1.5rem; /* Matches main-article */
    line-height: 1.8;
    color: #333;
  }

  .article-content p { margin: 0 0 1.5em; }
  .article-content h2 { font-size: 1.8rem; margin: 2em 0 1em; }
  .article-content h3 { font-size: 1.5rem; margin: 2em 0 1em; }
  .article-content a { color: #c1151b; text-decoration: none; }
  .article-content a:hover { text-decoration: underline; }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
    text-align: center; /* Centered back link */
  }

  .article-back-link {
    color: #c1151b;
    text-decoration: none;
    font-weight: 600;
  }
  .article-back-link:hover { text-decoration: underline; }

  @media (max-width: 750px) {
    .article-title { font-size: 2.5rem; }
  }
{%- endstyle -%}

<div class="section-{{ section.id }}-padding">
  <article class="article-showreel-container" itemscope itemtype="http://schema.org/BlogPosting">
    {%- comment -%} Header: Title & Date {%- endcomment -%}
    <header class="article-header">
      <h1 class="article-title" itemprop="headline">{{ article.title }}</h1>
      {%- if section.settings.show_date -%}
        <p class="article-meta">Posted on {{ article.published_at | time_tag: format: 'date' }}</p>
      {%- endif -%}
    </header>

    {%- comment -%} Media: Video or Image Fallback {%- endcomment -%}
    {%- liquid
      assign showreel_url = article.metafields.custom.showreel_link.value
      assign video_id = ''
      if showreel_url contains 'watch?v='
        assign video_id = showreel_url | split: 'watch?v=' | last | split: '&' | first
      elsif showreel_url contains 'youtu.be/'
        assign video_id = showreel_url | split: 'youtu.be/' | last | split: '?' | first | split: '&' | first
      endif

      assign video_embed_url = ''
      if video_id != blank
        assign video_embed_url = 'https://www.youtube.com/embed/' | append: video_id
      endif
    -%}

    <div class="article-media-container">
      {%- if video_embed_url != blank -%}
        <div class="video-wrapper">
          <iframe
            src="{{ video_embed_url }}"
            title="{{ article.title | escape }}"
            frameborder="0"
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
            allowfullscreen
          ></iframe>
        </div>
      {%- elsif article.image -%}
        {{ article.image | image_url: width: 1600 | image_tag: loading: 'eager', class: 'article-image' }}
      {%- endif -%}
    </div>

    {%- comment -%} Article Body {%- endcomment -%}
    <div class="article-content rte" itemprop="articleBody">
      {{ article.content }}
    </div>

    <footer class="article-footer">
      <a href="{{ blog.url }}" class="article-back-link">‚Üê Back to {{ blog.title }}</a>
    </footer>
  </article>
</div>

{% schema %}
{
  "name": "Showreel Article",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Show date"
    },
    {
      "type": "header",
      "content": "Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ]
}
{% endschema %}
