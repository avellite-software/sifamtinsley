{% comment %}
  =====================================================================================
  MODIFIED COLLECTIONS PAGE
  -------------------------------------------------------------------------------------
  - Adds a sidebar with a list of all collections (hidden on mobile).
  - Restyles collection tiles to be red with white, bold text.
  - Adds a "more >" button to each tile.
  - Makes the entire tile a clickable link with a hover-to-expand effect.
  - All CSS is included in this file for simplicity.
  =====================================================================================
{% endcomment %}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<style>
  /* ==============================================
     General Section Styles
     ============================================== */
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  .collection-list-title {
    margin-bottom: 2rem;
  }

  /* ==============================================
     Main Page Layout (Sidebar + Grid)
     ============================================== */
  .collections-page-layout {
    display: grid;
    grid-template-columns: 240px 1fr; /* Sidebar width + Main content */
    gap: 40px;
  }

  /* ==============================================
     Collections Sidebar Menu
     ============================================== */
  .collections-sidebar {
    border-right: 1px solid #e5e5e5;
    padding-right: 25px;
  }

  .collections-sidebar h3 {
    font-size: 18px;
    margin: 0 0 1rem 0;
    color: #333;
  }

  .collections-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .collections-sidebar li {
    margin-bottom: 0.5rem;
  }

  .collections-sidebar a {
    text-decoration: none;
    color: #555;
    font-weight: 500;
    font-size: 16px;
    padding: 6px 10px;
    display: block;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .collections-sidebar a:hover {
    background-color: #f5f5f5;
    color: #000;
  }

  /* ==============================================
     Collection Grid & Card Styles
     ============================================== */
  .collection-grid {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
  }

  .collection-card {
    background-color: #c1151b; /* Main red color from header */
    color: #ffffff;
    border-radius: 8px;
    overflow: hidden;
    position: relative;
    text-decoration: none;
    display: flex;
    flex-direction: column;
    height: 100%;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .collection-card:hover {
    transform: scale(1.05); /* Expands the tile on hover */
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.2);
    z-index: 10;
  }

  /* This makes the entire card clickable */
  .collection-card::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
  }

  .collection-card__image-wrapper {
    position: relative;
    overflow: hidden;
    {% if section.settings.image_ratio == 'adapt' %}
      aspect-ratio: var(--image-aspect-ratio, 1);
    {% elsif section.settings.image_ratio == 'portrait' %}
      aspect-ratio: 2 / 3;
    {% else %}
      aspect-ratio: 1 / 1; /* Default to square */
    {% endif %}
  }

  .collection-card__image {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .collection-card__content {
    padding: 20px;
    text-align: center;
  }

  .collection-card__title {
    font-size: 22px;
    font-weight: bold;
    margin: 0 0 10px 0;
  }

  .collection-card__button {
    display: inline-block;
    font-size: 16px;
    font-weight: 500;
  }

  /* ==============================================
     Mobile & Tablet Responsiveness
     ============================================== */
  @media screen and (max-width: 990px) {
    .collections-page-layout {
      grid-template-columns: 1fr; /* Stack main content on top of where sidebar was */
    }

    .collections-sidebar {
      display: none; /* Hide the sidebar on smaller screens */
    }
  }

  @media screen and (max-width: 749px) {
    .collection-grid {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: 15px;
    }

    .collection-card__title {
      font-size: 18px;
    }

    .collection-card__content {
      padding: 15px;
    }
  }

  /* Fallback for basic grid structure */
  .grid { display: grid; }
  .grid__item { width: 100%; }
</style>

<div class="color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    {%- unless section.settings.title == blank -%}
      <h2 class="collection-list-title inline-richtext {{ section.settings.heading_size }}">
        {{ section.settings.title }}
      </h2>
    {%- endunless -%}

    <div class="collections-page-layout">
      {% comment %} ===== SIDEBAR MENU ===== {% endcomment %}
      <aside class="collections-sidebar">
        <h3>All Collections</h3>
        <ul>
          {%- for collection in collections -%}
            {% if collection.handle == 'all' %}{% continue %}{% endif %}
            <li>
              <a href="{{ collection.url }}" title="View the {{ collection.title }} collection">
                {{ collection.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </aside>

      {% comment %} ===== COLLECTIONS GRID ===== {% endcomment %}
      <main class="collections-main-content">
        <div class="collection-grid">
          {%- for block in section.blocks -%}
            {%- liquid
              assign collection_item = block.settings.collection
              assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1
              assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index
            -%}

            {% if collection_item and collection_item != empty %}
              <a href="{{ collection_item.url }}" class="collection-card grid__item">
                <div
                  class="collection-card__image-wrapper"
                  {% if section.settings.image_ratio == 'adapt' and collection_item.featured_image %}
                    style="--image-aspect-ratio: {{ collection_item.featured_image.aspect_ratio }};"
                  {% endif %}
                >
                  {%- if collection_item.featured_image -%}
                    <img
                      src="{{ collection_item.featured_image | image_url: width: 550 }}"
                      alt="{{ collection_item.featured_image.alt | escape }}"
                      class="collection-card__image"
                      width="{{ collection_item.featured_image.width }}"
                      height="{{ collection_item.featured_image.height }}"
                      loading="lazy"
                    >
                  {%- else -%}
                    {{ placeholder_image | placeholder_svg_tag: 'collection-card__image placeholder' }}
                  {%- endif -%}
                </div>
                <div class="collection-card__content">
                  <h3 class="collection-card__title">{{ collection_item.title }}</h3>
                  <span class="collection-card__button">more ></span>
                </div>
              </a>
            {% endif %}
          {%- endfor -%}
        </div>
      </main>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Collection list",
  "tag": "section",
  "class": "section",
  "max_blocks": 15,
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "default": "Collections",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" },
        { "value": "hxl", "label": "Extra Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "header",
      "content": "Layout"
    },
    {
      "type": "select",
      "id": "image_ratio",
      "options": [
        { "value": "adapt", "label": "Adapt to image" },
        { "value": "portrait", "label": "Portrait" },
        { "value": "square", "label": "Square" }
      ],
      "default": "square",
      "label": "Image ratio"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 6,
      "step": 1,
      "default": 3,
      "label": "Number of columns on desktop"
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "scheme-1"
    },
    {
      "type": "header",
      "content": "Mobile layout"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "options": [
        { "value": "1", "label": "1 column" },
        { "value": "2", "label": "2 columns" }
      ],
      "default": "2",
      "label": "Number of columns on mobile"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "featured_collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Collection list custom",
      "blocks": [
        { "type": "featured_collection" },
        { "type": "featured_collection" },
        { "type": "featured_collection" }
      ]
    }
  ]
}
{% endschema %}
