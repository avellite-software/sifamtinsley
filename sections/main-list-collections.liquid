{% comment %}
  =====================================================================================
  UPDATED SECTION: All Collections with Sidebar
  -------------------------------------------------------------------------------------
  - V6 Changes:
    - Wrapped content in a new full-width div.
    - Background colour now applies to the full screen width, behind the centered content.
  =====================================================================================
{% endcomment %}

<style>
  .all-collections-section-{{ section.id }} {
    --header-bg-color: {{ section.settings.header_bg_color }};
    --content-area-bg-color: {{ section.settings.content_area_bg_color }};
    --sidebar-bg-color: {{ section.settings.sidebar_bg_color }};
    --title-font-size: {{ section.settings.title_font_size }}px;
    --title-font-weight: {{ section.settings.title_font_weight }};
    --card-box-shadow: {{ section.settings.card_box_shadow }};
    --sidebar-box-shadow: {{ section.settings.sidebar_box_shadow }};
  }

  /* ==============================================
     Section Header / Title
     ============================================== */
  .all-collections-section-{{ section.id }} .section-header {
    background-color: var(--header-bg-color);
    padding: 2rem 0;
  }

  .all-collections-section-{{ section.id }} .section-header-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .all-collections-section-{{ section.id }} .section-header__title {
    margin: 0;
    font-size: var(--title-font-size);
    font-weight: var(--title-font-weight);
    text-align: center;
  }

  .section-header__title {
    padding: 30px 0;
  }

  /* ==============================================
     Main Page Layout & Background
     ============================================== */
  /* NEW: This wrapper is full-width and holds the background colour */
  .all-collections-section-{{ section.id }} .content-area-full-width {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: var(--content-area-bg-color);
  }

  .all-collections-section-{{ section.id }} .collections-page-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 40px;
    align-items: start;
  }

  /* ==============================================
     Sidebar Menu
     ============================================== */
  .all-collections-section-{{ section.id }} .collections-sidebar {
    background-color: var(--sidebar-bg-color);
    padding: 20px;
    border-radius: 8px;
    box-shadow: var(--sidebar-box-shadow);
  }

  .all-collections-section-{{ section.id }} .collections-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .all-collections-section-{{ section.id }} .collections-sidebar a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 12px;
    display: block;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .all-collections-section-{{ section.id }} .collections-sidebar a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  /* Sidebar Featured Page Image */
  .all-collections-section-{{ section.id }} .sidebar-featured-page {
    margin-top: 25px;
    padding-top: 25px;
    border-top: 1px solid #e1e1e1;
  }

  .all-collections-section-{{ section.id }} .sidebar-featured-page a {
    padding: 0;
  }

  .all-collections-section-{{ section.id }} .sidebar-featured-page img {
    width: 100%;
    height: auto;
    display: block;
    border-radius: 6px;
    transition: opacity 0.3s ease;
  }

  .all-collections-section-{{ section.id }} .sidebar-featured-page a:hover img {
    opacity: 0.85;
  }

  /* ==============================================
     Main Content Grid Wrapper
     ============================================== */
  .all-collections-section-{{ section.id }} .collection-grid-new {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
  }

  @media screen and (min-width: 750px) {
    .all-collections-section-{{ section.id }} .collection-grid-new {
      grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
    }
  }

  /* ==============================================
     Collection Card Style
     ============================================== */
  .collection-card-new {
    background-color: #c1151b;
    color: #ffffff;
    border-radius: 8px;
    text-decoration: none;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 180px;
    box-shadow: var(--card-box-shadow);
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .collection-card-new:hover {
    transform: translateY(-5px);
  }

  .collection-card-new__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
    flex-grow: 1;
    display: flex;
    align-items: center;
  }

  .collection-card-new__button {
    border: 2px solid #ffffff;
    background-color: transparent;
    color: #ffffff;
    padding: 8px 24px;
    border-radius: 5px;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .collection-card-new:hover .collection-card-new__button {
    background-color: #ffffff;
    color: #c1151b;
  }

  /* ==============================================
     Mobile & Tablet Responsiveness
     ============================================== */
  @media screen and (max-width: 990px) {
    .all-collections-section-{{ section.id }} .collections-page-layout {
      grid-template-columns: 1fr;
    }

    .all-collections-section-{{ section.id }} .collections-sidebar {
      display: none;
    }

    .all-collections-section-{{ section.id }} .section-header-container {
      padding: 0 1rem;
    }
  }
</style>

<div class="all-collections-section-{{ section.id }}">
  {%- if section.settings.title != blank -%}
    <div class="section-header">
      <div class="section-header-container">
        <h2 class="section-header__title">
          {{ section.settings.title }}
        </h2>
      </div>
    </div>
  {%- endif -%}

  <div class="content-area-full-width">
    <div class="page-width">
      <div class="collections-page-layout">
        <aside class="collections-sidebar">
          <ul>
            {%- for collection in collections -%}
              {%- if collection.handle == 'all' %}{% continue %}{% endif -%}
              <li>
                <a href="{{ collection.url }}" title="View the {{ collection.title }} collection">
                  {{ collection.title }}
                </a>
              </li>
            {%- endfor -%}
          </ul>

          {%- liquid
            assign featured_page = section.settings.featured_page
            assign featured_image = section.settings.featured_image
          -%}
          {%- if featured_page != blank and featured_image != blank -%}
            <div class="sidebar-featured-page">
              <a href="{{ featured_page.url }}" title="{{ featured_page.title | escape }}">
                <img
                  src="{{ featured_image | image_url: width: 400 }}"
                  alt="{{ featured_image.alt | default: featured_page.title | escape }}"
                  loading="lazy"
                  width="{{ featured_image.width }}"
                  height="{{ featured_image.height }}"
                >
              </a>
            </div>
          {%- endif -%}
        </aside>

        <div class="main-content-wrapper">
          <div class="collection-grid-new">
            {%- for collection in collections -%}
              {%- if collection.handle == 'all' %}{% continue %}{% endif -%}
              <a href="{{ collection.url }}" class="collection-card-new">
                <span class="collection-card-new__title">{{ collection.title }}</span>
                <span class="collection-card-new__button">MORE ></span>
              </a>
            {%- endfor -%}
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "All Collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Our Collections",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "content_area_bg_color",
      "label": "Content Area Background Color",
      "default": "#ffffff",
      "info": "This is the background for the entire area containing the sidebar and collection grid."
    },
    {
      "type": "color",
      "id": "sidebar_bg_color",
      "label": "Sidebar Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Shadow Settings"
    },
    {
      "type": "text",
      "id": "card_box_shadow",
      "label": "Card Box Shadow",
      "default": "0 4px 15px rgba(0, 0, 0, 0.1)",
      "info": "Use standard CSS box-shadow format. Set to 'none' to remove."
    },
    {
      "type": "text",
      "id": "sidebar_box_shadow",
      "label": "Sidebar Box Shadow",
      "default": "0 4px 15px rgba(0, 0, 0, 0.08)",
      "info": "Use standard CSS box-shadow format. Set to 'none' to remove."
    },
    {
      "type": "header",
      "content": "Sidebar Featured Page"
    },
    {
      "type": "page",
      "id": "featured_page",
      "label": "Featured page link",
      "info": "Select a page to link to from the sidebar image."
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured page image",
      "info": "Upload an image to display at the bottom of the sidebar."
    },
    {
      "type": "header",
      "content": "Title Style Settings"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 24,
      "max": 64,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "select",
      "id": "title_font_weight",
      "label": "Title Font Weight",
      "options": [
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-Bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra-Bold" }
      ],
      "default": "700"
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Columns on desktop"
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Columns on mobile",
      "options": [
        { "value": "1", "label": "1 column" },
        { "value": "2", "label": "2 columns" }
      ],
      "default": "1"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top (Content Area)",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom (Content Area)",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "All Collections with Sidebar"
    }
  ]
}
{% endschema %}
