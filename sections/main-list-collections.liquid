{% comment %}
  =====================================================================================
  NEW SECTION: All Collections with Sidebar
  -------------------------------------------------------------------------------------
  - Displays ALL store collections in the main grid (except the default 'all' collection).
  - Collection tiles are styled with a red background and white text, matching the user's image.
  - Section settings allow for custom background colors for the header, sidebar, and main content.
  - Section settings also allow for customizing the main title's appearance.
  =====================================================================================
{% endcomment %}

<style>
  .all-collections-section-{{ section.id }} {
    --header-bg-color: {{ section.settings.header_bg_color }};
    --sidebar-bg-color: {{ section.settings.sidebar_bg_color }};
    --main-bg-color: {{ section.settings.main_bg_color }};
    --title-font-size: {{ section.settings.title_font_size }}px;
    --title-font-weight: {{ section.settings.title_font_weight }};
    --title-text-transform: {% if section.settings.title_uppercase %}uppercase{% else %}none{% endif %};
  }

  /* ==============================================
     Section Padding & Layout
     ============================================== */
  .all-collections-section-{{ section.id }} .page-width {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .all-collections-section-{{ section.id }} .collections-page-layout {
    display: grid;
    grid-template-columns: 240px 1fr;
    gap: 40px;
  }

  /* ==============================================
     Section Header / Title
     ============================================== */
  .all-collections-section-{{ section.id }} .section-header {
    background-color: var(--header-bg-color);
    padding: 2rem 0;
  }

  .all-collections-section-{{ section.id }} .section-header__title {
    margin: 0;
    font-size: var(--title-font-size);
    font-weight: var(--title-font-weight);
    text-transform: var(--title-text-transform);
    text-align: center;
  }

  /* ==============================================
     Sidebar Menu
     ============================================== */
  .all-collections-section-{{ section.id }} .collections-sidebar {
    background-color: var(--sidebar-bg-color);
    padding: 20px;
    border-radius: 8px;
    align-self: start; /* Prevents sidebar from stretching */
  }

  .all-collections-section-{{ section.id }} .collections-sidebar h3 {
    font-size: 18px;
    margin: 0 0 1rem 0;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e1e1e1;
  }

  .all-collections-section-{{ section.id }} .collections-sidebar ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .all-collections-section-{{ section.id }} .collections-sidebar a {
    text-decoration: none;
    color: #333;
    font-weight: 500;
    padding: 8px 12px;
    display: block;
    border-radius: 4px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .all-collections-section-{{ section.id }} .collections-sidebar a:hover {
    background-color: #f0f0f0;
    color: #000;
  }

  /* ==============================================
     Main Content & Collection Grid
     ============================================== */
  .all-collections-section-{{ section.id }} .collections-main-content {
    background-color: var(--main-bg-color);
    padding: 20px;
    border-radius: 8px;
  }

  .all-collections-section-{{ section.id }} .collection-grid-new {
    display: grid;
    gap: 20px;
    grid-template-columns: repeat({{ section.settings.columns_desktop }}, 1fr);
  }

  /* ==============================================
     NEW Collection Card Style
     ============================================== */
  .collection-card-new {
    background-color: #c1151b; /* As per header style */
    color: #ffffff;
    border-radius: 8px;
    text-decoration: none;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    text-align: center;
    min-height: 180px;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }

  .collection-card-new:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.15);
  }

  .collection-card-new__title {
    font-size: 1.25rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    line-height: 1.3;
    flex-grow: 1;
    display: flex;
    align-items: center;
  }

  .collection-card-new__button {
    border: 2px solid #ffffff;
    background-color: transparent;
    color: #ffffff;
    padding: 8px 24px;
    border-radius: 5px;
    font-weight: 600;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
    transition: background-color 0.2s ease, color 0.2s ease;
  }

  .collection-card-new:hover .collection-card-new__button {
    background-color: #ffffff;
    color: #c1151b;
  }

  /* ==============================================
     Mobile & Tablet Responsiveness
     ============================================== */
  @media screen and (max-width: 990px) {
    .all-collections-section-{{ section.id }} .collections-page-layout {
      grid-template-columns: 1fr;
    }

    .all-collections-section-{{ section.id }} .collections-sidebar {
      display: none; /* Hide sidebar on smaller screens */
    }
  }

  @media screen and (max-width: 749px) {
    .all-collections-section-{{ section.id }} .collection-grid-new {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
    }
    .all-collections-section-{{ section.id }} .section-header {
      padding: 1.5rem 0;
    }
  }
</style>

<div class="all-collections-section-{{ section.id }}">
  {%- if section.settings.title != blank -%}
    <div class="section-header">
      <div class="page-width">
        <h2 class="section-header__title">
          {{ section.settings.title }}
        </h2>
      </div>
    </div>
  {%- endif -%}

  <div class="page-width">
    <div class="collections-page-layout">
      <aside class="collections-sidebar">
        <h3>All Collections</h3>
        <ul>
          {%- for collection in collections -%}
            {%- if collection.handle == 'all' %}{% continue %}{% endif -%}
            <li>
              <a href="{{ collection.url }}" title="View the {{ collection.title }} collection">
                {{ collection.title }}
              </a>
            </li>
          {%- endfor -%}
        </ul>
      </aside>

      <main class="collections-main-content">
        <div class="collection-grid-new">
          {%- comment %} Loop through ALL collections instead of section blocks {%- endcomment %}
          {%- for collection in collections -%}
            {%- if collection.handle == 'all' %}{% continue %}{% endif -%}
            <a href="{{ collection.url }}" class="collection-card-new">
              <span class="collection-card-new__title">{{ collection.title }}</span>
              <span class="collection-card-new__button">MORE ></span>
            </a>
          {%- endfor -%}
        </div>
      </main>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "All Collections",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "Content Settings"
    },
    {
      "type": "text",
      "id": "title",
      "default": "Our Collections",
      "label": "Heading"
    },
    {
      "type": "header",
      "content": "Color Settings"
    },
    {
      "type": "color",
      "id": "header_bg_color",
      "label": "Header Background Color",
      "default": "#f5f5f5"
    },
    {
      "type": "color",
      "id": "sidebar_bg_color",
      "label": "Sidebar Background Color",
      "default": "#ffffff"
    },
    {
      "type": "color",
      "id": "main_bg_color",
      "label": "Main Content Background Color",
      "default": "#ffffff"
    },
    {
      "type": "header",
      "content": "Title Style Settings"
    },
    {
      "type": "range",
      "id": "title_font_size",
      "min": 24,
      "max": 64,
      "step": 2,
      "unit": "px",
      "label": "Title Font Size",
      "default": 40
    },
    {
      "type": "select",
      "id": "title_font_weight",
      "label": "Title Font Weight",
      "options": [
        { "value": "400", "label": "Regular" },
        { "value": "500", "label": "Medium" },
        { "value": "600", "label": "Semi-Bold" },
        { "value": "700", "label": "Bold" },
        { "value": "800", "label": "Extra-Bold" }
      ],
      "default": "700"
    },
    {
      "type": "checkbox",
      "id": "title_uppercase",
      "label": "Make title uppercase",
      "default": true
    },
    {
      "type": "header",
      "content": "Layout Settings"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 2,
      "max": 5,
      "step": 1,
      "default": 3,
      "label": "Columns on desktop"
    },
    {
      "type": "range",
      "id": "columns_mobile",
      "min": 1,
      "max": 2,
      "step": 1,
      "default": 1,
      "label": "Columns on mobile"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 52
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 52
    }
  ],
  "presets": [
    {
      "name": "All Collections with Sidebar"
    }
  ]
}
{% endschema %}
