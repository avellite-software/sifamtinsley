<style>
  @font-face {
    font-family: 'DigitalClockFont';
    src: url('{{ "DSEG14Classic-Light.woff2" | asset_url }}') format('woff2');
    font-weight: normal;
    font-style: normal;
  }
  .orbit-section-{{ section.id }} {
    --animation-duration: {{ section.settings.animation_duration }}s;
    position: relative;
    width: 100%;
    min-height: 70vh;
    overflow: hidden;
    cursor: grab;
    user-select: none;
    background-color: #111;
    background-image: radial-gradient(circle at 130% 100%, #c1151b 0%, transparent 100%);
    border-bottom-right-radius: 50px;
  }
  .orbit-section-{{ section.id }}:active {
    cursor: grabbing;
  }
  .orbit-container {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 10;
    transition: opacity 0.4s ease;
  }
  .orbit-section--expanded .orbit-container {
    opacity: 1;
    pointer-events: none;
    z-index: 1600;
  }

  .orbit-section--expanded .overlays-wrapper {
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
  }

  .orbit-product-card {
    position: absolute;
    top: 0;
    left: 0;
    width: 450px;
    will-change: transform, opacity;
    transform-origin: center center;
    transition: transform 0.5s cubic-bezier(0.25, 0.8, 0.25, 1), opacity 0.4s ease;
    z-index: 1;
    pointer-events: auto;
    cursor: pointer;
    text-decoration: none;
  }
  .orbit-section--expanded .orbit-product-card:not(.is-active) {
    opacity: 0 !important;
    pointer-events: none;
  }
  .orbit-section--expanded .orbit-product-card.is-active {
    opacity: 1 !important;
    cursor: default;
  }
  .orbit-product-card__inner {
    position: relative;
    width: 100%;
    aspect-ratio: 1/1;
    border-radius: 12px;
  }
  .orbit-product-card::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 1%; /* Keep this small */
    height: 1%; /* Keep this small */
    border-radius: 50%;
    /* Adjust these values as needed for size and intensity */
    box-shadow: 0 0 10vmin 10vmin rgba(255, 255, 255, 0.15);
    z-index: 0; /* Ensures it stays behind the card content */
    pointer-events: none; /* Prevents it from interfering with clicks */
  }
  .orbit-product-card__image {
    position: relative;
    z-index: 2;
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
    pointer-events: none;
  }
  .orbit-product-card__title {
    color: #fff;
    font-family: 'DigitalClockFont', sans-serif; /* We will set this up next */
    font-size: 3.2rem;
    font-weight: 700;
    text-align: left;
    padding: 0px;
    margin: 0;
    text-decoration: none;
    white-space: nowrap;
    /* Glowing effect */
    text-shadow: 0 0 5px rgba(255,255,255,0.7), 0 0 10px #ffffffff, 0 0 15px #ffffffff;
  }

  .orbit-product-card__category {
    font-size: 1.9rem;
    font-weight: 400;
    color: rgba(255, 255, 255, 0.8);
    white-space: nowrap;
  }
  .orbit-product-card.is-unclickable {
    pointer-events: none;
  }
  .card-index {
    position: absolute;
    top: 10px;
    left: 10px;
    background-color: rgba(0,0,0,0.5);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }
  .glass-overlay {
    position: absolute;
    top: 40px;
    padding: 25px;
    border-radius: 12px;
    color: #fff;
    z-index: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 180px;
  }
  .glass-overlay-2 {
    position: absolute;
    top: 40px;
    padding: 25px;
    background-color: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    -webkit-backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 12px;
    color: #fff;
    z-index: 500;
    display: flex;
    flex-direction: column;
    justify-content: center;
    height: 180px;
  }
  .glass-overlay--right { right: 40px; width: 300px; }
  .glass-overlay--left { width: 450px; }
  .glass-overlay__title { font-size: 1.8rem; font-weight: 700; margin: 0 0 1rem; line-height: 1.2; color: #fff; }
  .glass-overlay__title-2 { font-size: 3.8rem; font-weight: 700; margin: 0 0 1rem; line-height: 1.2; color: #fff; }
  .glass-overlay__text.rte p { margin: 0; line-height: 1.6; opacity: 0.9; }

  .expanded-view {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: block;
    opacity: 0;
    visibility: hidden;
    pointer-events: none;
    transition: opacity 0.4s ease, visibility 0.4s ease;
    z-index: 1500; /* Ensures it's on top of glass overlays */
  }
  .expanded-view.is-active {
    opacity: 1;
    visibility: visible;
    pointer-events: auto;
  }
  .expanded-view__card {
    position: absolute;
    width: 450px;
    transition: transform 0.5s cubic-bezier(0.25, 0.8, 0.25, 1);
  }
  .expanded-view__info {
    position: absolute;
    width: 600px;
    border-radius: 12px;
    box-shadow: 0 15px 40px rgba(0,0,0,0.2);
    padding: 30px;
    opacity: 0;
    transform: scale(0.95);
    transition: transform 0.5s cubic-bezier(0.25, 0.8, 0.25, 1) 0.1s, opacity 0.4s ease 0.1s;

    /* --- ADD THESE GLASS STYLES --- */
    color: #000000ff;
    background-color: rgba(255, 255, 255, 1);
  }
  .expanded-view.is-active .expanded-view__info {
    transform: scale(1);
    opacity: 1;
  }
  .expanded-view__title {
    font-size: 2rem;
    font-weight: 700;
    margin: 0 0 1rem;
    color: #000000ff;
  }
  .expanded-view__button { display: inline-block; margin-top: 20px; padding: 12px 28px; background: #c1151b; color: #fff; border-radius: 4px; text-decoration: none; font-weight: 600; }

  .carousel-container { position: relative; height: 120px; overflow: hidden; margin-bottom: 20px; }
  .carousel-content-wrapper { display: flex; height: 100%; transition: transform 0.5s ease-in-out; }
  .carousel-item { width:200px; min-width: 100%; flex-shrink: 0; padding-right: 20px; box-sizing: border-box; font-size: 1rem; line-height: 1.6; color: #000000ff; overflow-y: auto; white-space: normal; word-wrap: break-word; }
  .carousel-item p, .carousel-item li { margin-bottom: 1em; }
  .carousel-controls { display: flex; justify-content: flex-start; align-items: center; gap: 10px; margin-top: 15px; }
  .carousel-control-btn { background: #eee; border: none; border-radius: 4px; padding: 8px 12px; cursor: pointer; font-size: 0.9rem; color: #333; transition: background 0.2s; }
  .carousel-control-btn.active, .carousel-control-btn:hover { background: #c1151b; color: #fff; }

  @media screen and (max-width: 1500px) {
    .expanded-view__info {
      left: auto !important;
      right: 40px;
      width: 500px;
    }
  }
  @media screen and (max-width: 1080px) {
    .orbit-product-card { width: 250px; }
    .expanded-view__info { width: 400px; }
  }
  @media screen and (max-width: 990px) {
    .glass-overlay { display: none; }
    .glass-overlay-2 { display: none; }
  }
  @media screen and (max-width: 768px) {
    .is-active { display: none; }
    .orbit-section-{{ section.id }} { min-height: 60vh; }
    .expanded-view {
      display: flex;
      flex-direction: column;
      justify-content: center;
      align-items: center;
      gap: 20px;
      padding: 20px;
    }
    .expanded-view__card,
    .expanded-view__info {
      position: static; /* Let flexbox handle positioning */
      transform: none !important; /* Reset transforms */
      opacity: 1;
      width: 100%;
      max-width: 400px;
      margin: 0 auto;
    }
    .expanded-view__card {
      width: 250px; /* Match mobile card size */
    }
    .expanded-view__info {
      padding: 20px;
    }
    .expanded-view__title {
      font-size: 1.5rem;
    }
  }
</style>

<div
  class="orbit-section-{{ section.id }}"
  data-section-id="{{ section.id }}"
  data-center-x="{{ orbit_center_x_multiplier }}"
  data-center-y="{{ orbit_center_y_multiplier }}"
  data-radius-x="{{ orbit_radius_x_multiplier }}"
  data-radius-y="{{ orbit_radius_y_multiplier }}"
  data-glass-left="true"
>
  <div class="orbit-container">
    {%- for product in section.settings.product_list -%}
      <a href="{{ product.url }}" class="orbit-product-card" data-product-index="{{ forloop.index0 }}">
        <h3 class="orbit-product-card__title">{{ product.title }}</h3>
        {%- if product.metafields.custom.category.value != blank -%}
          <span class="orbit-product-card__category">{{ product.metafields.custom.category.value }}</span>
        {%- endif -%}
        <div class="orbit-product-card__inner">
          <span class="card-index">{{ forloop.index }}/{{ forloop.length }}</span>
          {% if product.featured_image %}
            <img
              src="{{ product.featured_image | image_url: width: 450 }}"
              alt="{{ product.featured_image.alt | escape }}"
              class="orbit-product-card__image"
              loading="lazy"
              width="450"
              height="{{ 450 | divided_by: product.featured_image.aspect_ratio | round }}"
            >
          {% else %}
            <img
              src="https://placehold.co/450x450/fff/ccc?text={{ product.title | escape }}"
              alt="{{ product.title | escape }}"
              class="orbit-product-card__image"
              width="450"
              height="450"
            >
          {% endif %}
        </div>
      </a>
    {%- else -%}
      {%- for i in (1..6) -%}
        <div class="orbit-product-card is-unclickable">
          <div class="orbit-product-card__inner">
            <span class="card-index">{{ i }}/6</span>
            <img
              src="https://placehold.co/450x450/fff/ccc?text=Product+{{ i }}"
              alt="Placeholder"
              class="orbit-product-card__image"
              width="450"
              height="450"
            >
          </div>
        </div>
      {%- endfor -%}
    {%- endfor -%}
  </div>

  <div class="overlays-wrapper">
    {%- if section.settings.glass_right_title != blank or section.settings.glass_right_text != blank -%}
      <div class="glass-overlay-2 glass-overlay--right">
        {%- if section.settings.glass_right_title != blank -%}
          <h3 class="glass-overlay__title">{{ section.settings.glass_right_title }}</h3>
        {%- endif -%}
        {%- if section.settings.glass_right_text != blank -%}
          <div class="glass-overlay__text rte">{{ section.settings.glass_right_text }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
    {%- if section.settings.glass_left_title != blank or section.settings.glass_left_text != blank -%}
      <div class="glass-overlay glass-overlay--left">
        {%- if section.settings.glass_left_title != blank -%}
          <h3 class="glass-overlay__title-2">{{ section.settings.glass_left_title }}</h3>
        {%- endif -%}
        {%- if section.settings.glass_left_text != blank -%}
          <div class="glass-overlay__text rte">{{ section.settings.glass_left_text }}</div>
        {%- endif -%}
      </div>
    {%- endif -%}
  </div>

