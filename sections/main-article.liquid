{% comment %}
  V2 - Simplified Main Article
  - Increased title and body font sizes as requested.
{% endcomment %}

{%- style -%}
  .article-page-section {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
  }

  .article-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  /* --- Article Header --- */
  .article-header {
    text-align: center;
    margin-bottom: 2.5rem;
  }
  .article-title {
    font-size: 5.8rem; /* MODIFIED */
    font-weight: 800;
    margin: 0 0 0.5rem;
    line-height: 1.2;
    color: #1c1c1c;
  }
  .article-meta {
    font-size: 0.9rem;
    color: #777;
  }

  /* --- Featured Image --- */
  .article-featured-image {
    margin-bottom: 2.5rem;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(0,0,0,0.1);
  }
  .article-featured-image img {
    width: 100%;
    height: auto;
    display: block;
  }

  /* --- Article Content --- */
  .article-content {
    font-size: 1.5rem; /* MODIFIED */
    line-height: 1.8;
    color: #333;
  }
  .article-content p { margin: 0 0 1.5em; }
  .article-content h2 { font-size: 1.8rem; margin: 2em 0 1em; }
  .article-content h3 { font-size: 1.5rem; margin: 2em 0 1em; }
  .article-content ul,
  .article-content ol { margin: 1.5em 0; padding-left: 1.5em; }
  .article-content li { margin-bottom: 0.5em; }
  .article-content a { color: #c1151b; text-decoration: none; }
  .article-content a:hover { text-decoration: underline; }

  /* --- Share & Back Buttons --- */
  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e5;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .article-back-link {
    color: #c1151b;
    text-decoration: none;
    font-weight: 600;
  }
  .article-back-link:hover {
    text-decoration: underline;
  }

  /* --- Comments Section --- */
  .article-comments {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid #e5e5e5;
  }
  .article-comments h2 {
    text-align: center;
    margin-bottom: 2rem;
  }
  .article-template__comments-comment {
    border: 1px solid #eee;
    background: #fff;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 1.5rem;
  }
  .article-template__comments-comment footer {
    margin-top: 1rem;
    font-size: 0.9rem;
    color: #777;
    text-align: right;
  }
  .comment-form {
    margin-top: 2rem;
  }
  .comment-form .field {
    margin-bottom: 1rem;
  }
  .comment-form .field__label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }
  .comment-form .field__input,
  .comment-form .text-area {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 4px;
  }
  .comment-form .button {
    padding: 12px 28px;
    background: #c1151b;
    color: #fff;
    border: none;
    border-radius: 4px;
    cursor: pointer;
    font-size: 1rem;
  }
{%- endstyle -%}

<article class="article-page-section">
  <div class="article-container">
    <header class="article-header">
      <h1 class="article-title">{{ article.title | escape }}</h1>
      {%- if section.settings.show_date -%}
        <p class="article-meta">Posted on {{ article.published_at | time_tag: format: 'date' }}</p>
      {%- endif -%}
    </header>

    {%- if article.image and section.settings.show_image -%}
      <div class="article-featured-image">
        <img
          src="{{ article.image | image_url: width: 1600 }}"
          alt="{{ article.image.alt | escape }}"
          width="{{ article.image.width }}"
          height="{{ article.image.height }}"
          loading="eager"
        >
      </div>
    {%- endif -%}

    <div class="article-content rte">
      {{ article.content }}
    </div>

    <footer class="article-footer">
      <a href="{{ blog.url }}" class="article-back-link"> &larr; Back to {{ blog.title | escape }} </a>
      {%- if section.settings.show_share_buttons -%}
        {% assign share_url = request.origin | append: article.url %}
        {% render 'share-button', share_link: share_url %}
      {%- endif -%}
    </footer>

    {%- if blog.comments_enabled? -%}
      <div id="comments" class="article-comments">
        {%- if article.comments_count > 0 -%}
          <h2>{{ 'blogs.article.comments' | t: count: article.comments_count }}</h2>
          {% paginate article.comments by 5 %}
            <div class="article-template__comments">
              {%- for comment in article.comments -%}
                <article id="{{ comment.id }}" class="article-template__comments-comment">
                  {{ comment.content }}
                  <footer>
                    <span>{{ comment.author }}</span> |
                    <span>{{- comment.created_at | time_tag: format: 'date' -}}</span>
                  </footer>
                </article>
              {%- endfor -%}
              {% render 'pagination', paginate: paginate, anchor: '#comments' %}
            </div>
          {% endpaginate %}
        {%- endif -%}

        {% form 'new_comment', article, class: 'comment-form' %}
          <h2>{{ 'blogs.article.comment_form_title' | t }}</h2>

          {%- if form.errors -%}
            <div class="form__message" role="alert">
              <h3>{{ 'templates.contact.form.error_heading' | t }}</h3>
            </div>
          {%- elsif form.posted_successfully? -%}
            <div class="form-status-list form__message" role="status">
              <h3>{{ 'blogs.article.success' | t }}</h3>
            </div>
          {%- endif -%}

          <div class="comment-form__fields">
            <div class="field">
              <label class="field__label" for="CommentForm-author">Name <span aria-hidden="true">*</span></label>
              <input class="field__input" type="text" name="comment[author]" id="CommentForm-author" required>
            </div>
            <div class="field">
              <label class="field__label" for="CommentForm-email">Email <span aria-hidden="true">*</span></label>
              <input class="field__input" type="email" name="comment[email]" id="CommentForm-email" required>
            </div>
          </div>
          <div class="field">
            <label class="field__label" for="CommentForm-body">Message <span aria-hidden="true">*</span></label>
            <textarea class="text-area" rows="5" name="comment[body]" id="CommentForm-body" required></textarea>
          </div>

          <input type="submit" class="button" value="{{ 'blogs.article.post' | t }}">
        {% endform %}
      </div>
    {%- endif -%}
  </div>
</article>

<script type="application/ld+json">
  {{ article | structured_data }}
</script>

{% schema %}
{
  "name": "Main article",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "Show featured image"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Show date"
    },
    {
      "type": "checkbox",
      "id": "show_share_buttons",
      "default": true,
      "label": "Show share buttons"
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 36
    }
  ]
}
{% endschema %}
