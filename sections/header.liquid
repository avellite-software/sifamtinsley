<header class="custom-header">
  <div class="header-left">
    <div class="circle-dropdown-container">
      <div class="large-red-circle">
        <button class="circle-dropdown-trigger">
          <span class="circle-dropdown-text">More Info</span>
        </button>
        <div class="circle-dropdown-content">
          <a href="#">Dropdown Link 1</a>
          <a href="#">Dropdown Link 2</a>
        </div>
      </div>
    </div>
    <a href="{{ routes.root_url }}" class="logo">
      {% if settings.logo %}
        <img src="{{ settings.logo | image_url: width: 120 }}" alt="{{ shop.name }}" width="120" height="auto">
      {% else %}
        <span>{{ shop.name }}</span>
      {% endif %}
    </a>
  </div>
  <div class="header-center">
    <form action="{{ routes.search_url }}" method="get" class="search-form">
      <label for="SearchBarInput" class="search-label">Search</label>
      <input id="SearchBarInput" type="search" name="q" placeholder="Search products..." class="search-input">
      <button type="submit" class="search-btn">Go</button>
    </form>
  </div>
  <div class="header-right">
    <div class="dropdown header-btn">
      <button class="dropdown-trigger">About</button>
      <div class="dropdown-content">
        <a href="/collections/all">About Us</a>
        <a href="/pages/about-us">Our Story</a>
      </div>
    </div>
    <div class="dropdown header-btn">
      <button class="dropdown-trigger">Products</button>
      <div class="dropdown-content">
        <a href="/collections/all">All Products</a>
        <a href="/collections/new">New Arrivals</a>
      </div>
    </div>
    <div class="dropdown header-btn">
      <button class="dropdown-trigger">Resources</button>
      <div class="dropdown-content">
        <a href="/pages/resources">Resource Center</a>
        <a href="/pages/blog">Blog</a>
      </div>
    </div>
    <div class="dropdown header-btn red-btn">
      <button class="dropdown-trigger">Contact Us</button>
      <div class="dropdown-content">
        <a href="/pages/contact">Contact Form</a>
        <a href="mailto:info@example.com">Email Us</a>
      </div>
    </div>
    <a href="{{ routes.cart_url }}" class="header-btn cart-btn" id="cart-icon-bubble">
      {% if cart == empty %}
        <span class="svg-wrapper">{{ 'icon-cart-empty.svg' | inline_asset_content }}</span>
      {% else %}
        <span class="svg-wrapper">{{ 'icon-cart.svg' | inline_asset_content }}</span>
      {% endif %}
      <span class="visually-hidden">{{ 'templates.cart.cart' | t }}</span>
      {%- if cart != empty -%}
        <div class="cart-count-bubble">
          {%- if cart.item_count < 100 -%}
            <span aria-hidden="true">{{ cart.item_count }}</span>
          {%- endif -%}
          <span class="visually-hidden">{{ 'sections.header.cart_count' | t: count: cart.item_count }}</span>
        </div>
      {%- endif -%}
    </a>
  </div>
</header>

<style>
  .custom-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 0 32px;
    background: #fff;
    height: 96px;
    border-bottom: 1px solid #eee;
    font-family: inherit;
  }
  .header-left {
    display: flex;
    align-items: center;
    gap: 32px;
  }
  .circle-dropdown-container {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 96px;
    width: 96px;
  }
  .large-red-circle {
    background: #c1151b;
    border-radius: 50%;
    width: 96px;
    height: 96px;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
  }
  .circle-dropdown-trigger {
    background: none;
    border: none;
    color: #fff;
    font-size: 22px;
    font-weight: bold;
    cursor: pointer;
    position: absolute;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 2;
  }
  .circle-dropdown-content {
    display: none;
    position: absolute;
    top: 100px;
    left: 0;
    background: #fff;
    border: 1px solid #eee;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    min-width: 140px;
    z-index: 10;
    flex-direction: column;
  }
  .large-red-circle:hover .circle-dropdown-content,
  .circle-dropdown-trigger:focus + .circle-dropdown-content {
    display: flex;
  }
  .circle-dropdown-content a {
    padding: 10px 16px;
    text-decoration: none;
    color: #333;
    font-size: 15px;
    transition: background 0.2s;
  }
  .circle-dropdown-content a:hover {
    background: #f5f5f5;
  }
  .logo img {
    height: 56px;
    width: auto;
    display: block;
  }
  .logo span {
    font-size: 28px;
    font-weight: bold;
    color: #333;
  }
  .header-center {
    flex: 1;
    display: flex;
    justify-content: center;
  }
  .search-form {
    display: flex;
    align-items: center;
    gap: 8px;
  }
  .search-label {
    font-size: 18px;
    color: #333;
    margin-right: 4px;
  }
  .search-input {
    padding: 8px 16px;
    border: 1px solid #ccc;
    border-radius: 4px;
    font-size: 16px;
  }
  .search-btn {
    background: #eee;
    border: none;
    padding: 8px 18px;
    border-radius: 4px;
    font-size: 16px;
    cursor: pointer;
  }
  .header-right {
    display: flex;
    align-items: center;
    gap: 16px;
  }
  .header-btn {
    position: relative;
    padding: 10px 22px;
    border-radius: 4px;
    background: none;
    color: #c1151b;
    border: 1px solid #c1151b;
    text-decoration: none;
    font-size: 16px;
    transition: background 0.2s, color 0.2s;
    cursor: pointer;
    display: flex;
    align-items: center;
  }
  .header-btn:hover,
  .header-btn:focus {
    background: #c1151b;
    color: #fff;
  }
  .red-btn {
    background: #c1151b;
    color: #fff;
    border: 1px solid #c1151b;
  }
  .dropdown-content {
    display: none;
    position: absolute;
    top: 48px;
    left: 0;
    background: #fff;
    border: 1px solid #eee;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
    min-width: 140px;
    z-index: 10;
    flex-direction: column;
  }
  .dropdown:hover .dropdown-content,
  .dropdown-trigger:focus + .dropdown-content {
    display: flex;
  }
  .dropdown-content a {
    padding: 10px 16px;
    text-decoration: none;
    color: #333;
    font-size: 15px;
    transition: background 0.2s;
  }
  .dropdown-content a:hover {
    background: #f5f5f5;
  }
  .cart-btn {
    display: flex;
    align-items: center;
    position: relative;
    background: #fff;
    color: #c1151b;
    border: 1px solid #c1151b;
    padding: 10px 22px;
    border-radius: 4px;
    transition: background 0.2s, color 0.2s;
  }
  .cart-btn:hover {
    background: #c1151b;
    color: #fff;
  }
  .svg-wrapper {
    width: 24px;
    height: 24px;
    display: inline-block;
    margin-right: 8px;
  }
  .cart-count-bubble {
    position: absolute;
    top: 6px;
    right: 6px;
    background: #c1151b;
    color: #fff;
    border-radius: 50%;
    width: 20px;
    height: 20px;
    font-size: 13px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
  }
</style>

{% schema %}
{ "name": "Custom Header", "settings": [ { "type": "image_picker", "id": "logo", "label": "Logo" } ] }
