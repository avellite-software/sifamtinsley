<script>
  // Self-contained script for the header. No need for external files.
  document.addEventListener('DOMContentLoaded', () => {
    const header = document.querySelector('.custom-header');
    if (!header) return;

    const mobileNavToggle = header.querySelector('.mobile-nav-toggle');
    const mobileNavClose = header.querySelector('.mobile-nav-close');
    const mobileNavOverlay = header.querySelector('.mobile-nav-overlay');
    const mobileNavContent = header.querySelector('.mobile-nav-content');
    const desktopCenterContainer = header.querySelector('[data-desktop-container="center"]');
    const desktopRightContainer = header.querySelector('[data-desktop-container="right"]');

    const BREAKPOINT = 1200;

    // --- Toggle Menu Open/Close ---
    const toggleMenu = (isOpen) => {
      document.body.classList.toggle('mobile-menu-open', isOpen);
    };
    mobileNavToggle.addEventListener('click', () => toggleMenu(true));
    mobileNavClose.addEventListener('click', () => toggleMenu(false));
    mobileNavOverlay.addEventListener('click', () => toggleMenu(false));

    // --- Move Nav Elements Between Desktop/Mobile ---
    const manageNavElements = () => {
      const isMobile = window.innerWidth <= BREAKPOINT;
      if (isMobile) {
        // If elements are not already in the mobile container, move them
        if (desktopCenterContainer.children.length > 0) {
          mobileNavContent.appendChild(desktopCenterContainer);
        }
        if (desktopRightContainer.children.length > 0) {
          mobileNavContent.appendChild(desktopRightContainer);
        }
      } else {
        // If elements are not in their desktop containers, move them back
        if (mobileNavContent.contains(desktopCenterContainer)) {
          header.insertBefore(desktopCenterContainer, header.querySelector('.mobile-nav-toggle'));
        }
        if (mobileNavContent.contains(desktopRightContainer)) {
          header.insertBefore(desktopRightContainer, header.querySelector('.mobile-nav-toggle'));
        }
        toggleMenu(false); // Always close menu on resize to desktop
      }
    };

    // --- Handle Mobile Submenu Toggles ---
    header.addEventListener('click', (e) => {
      const isMobile = window.innerWidth <= BREAKPOINT;
      const dropdownLink = e.target.closest('.dropdown-link');
      if (isMobile && dropdownLink) {
        e.preventDefault(); // Prevent link from navigating
        const parentDropdown = dropdownLink.closest('.dropdown');
        parentDropdown.classList.toggle('is-open');
      }
    });

    // --- Initial Check and Resize Listener ---
    manageNavElements();
    window.addEventListener('resize', manageNavElements);
  });
</script>
