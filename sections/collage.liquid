{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* --- Core Grid Setup --- */
  .collage-wrapper-title {
    margin-bottom: 3rem;
  }

  .collage-{{ section.id }} {
    display: grid;
    /* 12-column grid base */
    grid-template-columns: repeat(12, 1fr);
    /* Smaller base row height, lets content grow it */
    grid-auto-rows: minmax(220px, auto);
    gap: {{ section.settings.spacing | default: 20 }}px;
  }

  /* --- The Grid Cell Container (Handles White Space) --- */
  .collage__item {
    /* Flexbox centers the card within the grid slot */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    position: relative;
    transition: transform 0.3s ease;
  }

  .collage__item:hover {
    transform: translateY(-5px);
    z-index: 2;
  }

  /* --- The Card Wrapper inside the cell --- */
  .collage-card {
    /* Card takes up as much space as its aspect ratio allows, up to 100% of cell */
    max-width: 100%;
    max-height: 100%;
    width: 100%;

    border-radius: 12px;
    overflow: hidden;
    box-shadow: {{ section.settings.card_shadow }};
    background: #fff;
    /* Ensure card stretches vertically if needed to fit content */
    display: flex;
    flex-direction: column;
  }

  /* --- Card Component Overrides --- */
  .collage-card .card-wrapper {
     height: 100%;
     width: 100%;
  }
  .collage-card .card {
    height: 100%;
    border: none !important;
    box-shadow: none !important;
  }
  .collage-card .card__inner {
    border: none !important;
    box-shadow: none !important;
    background: transparent;
  }
  .collage-card .card__content {
      padding: 15px;
      text-align: center;
      flex-grow: 1; /* push footer down */
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
  }
  .collage-card .card__information {
    padding-top: 10px;
  }


  /* =========================================
     LAYOUT DEFINITIONS (Using 12-col spans)
     ========================================= */

  /* --- 1 Item (Hero) --- */
  .collage--1-items .collage__item { grid-column: span 12; grid-row: span 3; }

  /* --- 2 Items (50/50 split) --- */
  .collage--2-items .collage__item { grid-column: span 6; grid-row: span 2; }

  /* --- 3 Items (Thirds) --- */
  .collage--3-items .collage__item { grid-column: span 4; grid-row: span 2; }

  /* --- 4 Items (2x2 Grid) --- */
  .collage--4-items .collage__item { grid-column: span 6; grid-row: span 2; }

  /* --- 5 Items (Feature Left, 2x2 Right) --- */
  .collage--5-items .collage__item:nth-child(1) { grid-column: span 6; grid-row: span 2; }
  .collage--5-items .collage__item:not(:first-child) { grid-column: span 3; grid-row: span 1; }


  /* --- 6 Items (REDO: Clean 3x2 Grid) --- */
  /* This is the most stable layout for 6 items of varying aspect ratios */
  .collage--6-items .collage__item {
      grid-column: span 4; /* 3 items per row (12/4 = 3) */
      grid-row: span 2;    /* Make them reasonably tall */
  }


  /* --- 7 Items (REDO: Feature Left, 2x3 Grid Right) --- */
  /*
    [ Feature (span 6x3) ] [ Small ] [ Small ]
    [ Feature (cont...)  ] [ Small ] [ Small ]
    [ Feature (cont...)  ] [ Small ] [ Small ]
  */
  .collage--7-items .collage__item:nth-child(1) {
      grid-column: 1 / span 6; /* Left half */
      grid-row: 1 / span 3;    /* Tall feature */
  }
  /* The remaining 6 items fill the right half in a 2x3 grid */
  .collage--7-items .collage__item:not(:first-child) {
      grid-column: span 3; /* 2 items occupy the remaining 6 columns */
      grid-row: span 1;
  }
  /* Force positions for the right side grid to ensure correct flow */
  .collage--7-items .collage__item:nth-child(2) { grid-column: 7 / span 3; grid-row: 1; }
  .collage--7-items .collage__item:nth-child(3) { grid-column: 10 / span 3; grid-row: 1; }
  .collage--7-items .collage__item:nth-child(4) { grid-column: 7 / span 3; grid-row: 2; }
  .collage--7-items .collage__item:nth-child(5) { grid-column: 10 / span 3; grid-row: 2; }
  .collage--7-items .collage__item:nth-child(6) { grid-column: 7 / span 3; grid-row: 3; }
  .collage--7-items .collage__item:nth-child(7) { grid-column: 10 / span 3; grid-row: 3; }



  /* =========================================
     RESPONSIVE
     ========================================= */

  /* Tablet (Break complex grids down to 2 columns) */
  @media screen and (max-width: 990px) {
     /* Reset to a simple 2-column grid */
     .collage-{{ section.id }} {
         grid-template-columns: repeat(2, 1fr);
         grid-auto-rows: minmax(300px, auto);
     }

     /* Force all items to be simple 1x1 blocks within the 2-col grid */
     [class*="collage--"] .collage__item {
         grid-column: span 1 !important;
         grid-row: span 1 !important;
         grid-column-start: auto !important;
         grid-row-start: auto !important;
     }

     /* Exception: Make the first item full width for odd numbers so it looks neat */
     .collage--1-items .collage__item,
     .collage--3-items .collage__item:first-child,
     .collage--5-items .collage__item:first-child,
     .collage--7-items .collage__item:first-child {
         grid-column: span 2 !important;
     }
  }

  /* Mobile (1 column stack) */
  @media screen and (max-width: 749px) {
    .collage-{{ section.id }} {
        grid-template-columns: 1fr;
        gap: 15px;
    }
    /* Ensure cards have enough height on mobile */
    .collage-card { min-height: 400px; }

    [class*="collage--"] .collage__item {
         grid-column: span 1 !important;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.background_color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- liquid
      assign block_count = section.blocks.size
      assign skip_card_product_styles = false
    -%}

    <div class="collage collage-{{ section.id }} collage--{{ block_count }}-items">
      {%- for block in section.blocks -%}
        <div
          class="collage__item collage__item--{{ block.type }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="collage-card color-{{ section.settings.card_color_scheme }} gradient">
            {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
            {%- case block.type -%}
              {%- when 'product' -%}
                {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                {% render 'card-product',
                  card_product: block.settings.product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: block.settings.second_image,
                  show_price: false,
                  placeholder_image: placeholder_image,
                  skip_styles: skip_card_product_styles,
                  card_color_scheme: 'none'
                %}
                {% assign skip_card_product_styles = true %}

              {%- when 'collection' -%}
                {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                {% render 'card-collection',
                  card_collection: block.settings.collection,
                  media_aspect_ratio: 'adapt',
                  columns: 2,
                  placeholder_image: placeholder_image,
                  card_color_scheme: 'none'
                %}
            {%- endcase -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Advanced Collage",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Collage",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "header",
      "content": "Colors & Style"
    },
    {
      "type": "color_scheme",
      "id": "background_color_scheme",
      "label": "Section background",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Card background",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "card_shadow",
      "label": "Card Box Shadow",
      "default": "0 8px 20px rgba(0, 0, 0, 0.07)",
      "info": "Use standard CSS box-shadow format."
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "second_image",
          "default": false,
          "label": "Show second image on hover"
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 7,
  "presets": [
    {
      "name": "Advanced Collage",
      "blocks": [
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
