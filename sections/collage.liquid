{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /*
   * NEW CUSTOM COLLAGE STYLES
   */
  .collage-wrapper-title {
    margin-top: 0;
    margin-bottom: 3rem;
  }

  .collage-{{ section.id }} {
    display: grid;
    gap: 1.5rem;
  }

  .collage__item {
    transition: transform 0.3s ease, box-shadow 0.3s ease;
  }
  .collage__item:hover {
    transform: scale(1.03) translateY(-5px);
  }

  .collage-card {
    height: 100%;
    border-radius: 12px;
    overflow: hidden;
    box-shadow: {{ section.settings.card_shadow }};
  }

  /* This makes the inner card transparent to show the background */
  .collage-card .card {
    background-color: transparent !important;
    border: none;
    box-shadow: none;
  }
  .collage-card .card__inner {
    background-color: transparent !important;
    border: none;
    box-shadow: none;
  }
  .collage-card .card__inner:after {
    display: none;
  }

  /* --- Layout for 1 Item --- */
  .collage--1-items { grid-template-columns: 1fr; }

  /* --- Layout for 2 Items --- */
  .collage--2-items { grid-template-columns: 1fr 1fr; }

  /* --- Layout for 3 Items --- */
  .collage--3-items { grid-template-columns: repeat(3, 1fr); }

  /* --- Layout for 4 Items --- */
  .collage--4-items { grid-template-columns: repeat(2, 1fr); }

  /* --- Layout for 5 Items --- */
  .collage--5-items {
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: minmax(250px, auto);
  }
  .collage--5-items .collage__item:nth-child(1) { grid-column: span 2; grid-row: span 2; }
  .collage--5-items .collage__item:nth-child(2) { grid-column: span 2; }
  .collage--5-items .collage__item:nth-child(3) { grid-column: span 2; }

  /* --- Layout for 6 Items (Matches your image) --- */
  .collage--6-items {
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: minmax(250px, auto);
  }
  .collage--6-items .collage__item:nth-child(1) { grid-column: 1 / 2; grid-row: 1 / 2; }
  .collage--6-items .collage__item:nth-child(2) { grid-column: 1 / 2; grid-row: 2 / 4; }
  .collage--6-items .collage__item:nth-child(3) { grid-column: 2 / 4; grid-row: 1 / 3; }
  .collage--6-items .collage__item:nth-child(4) { grid-column: 4 / 5; grid-row: 1 / 2; }
  .collage--6-items .collage__item:nth-child(5) { grid-column: 4 / 5; grid-row: 2 / 3; }
  .collage--6-items .collage__item:nth-child(6) { grid-column: 2 / 5; grid-row: 3 / 4; }

  /* --- Layout for 7 Items --- */
  .collage--7-items {
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: minmax(250px, auto);
  }
  .collage--7-items .collage__item:nth-child(1) { grid-column: 1 / 3; grid-row: 1 / 3; }
  .collage--7-items .collage__item:nth-child(2) { grid-column: 3 / 4; grid-row: 1 / 2; }
  .collage--7-items .collage__item:nth-child(3) { grid-column: 4 / 5; grid-row: 1 / 2; }
  .collage--7-items .collage__item:nth-child(4) { grid-column: 3 / 4; grid-row: 2 / 3; }
  .collage--7-items .collage__item:nth-child(5) { grid-column: 4 / 5; grid-row: 2 / 3; }
  .collage--7-items .collage__item:nth-child(6) { grid-column: 1 / 3; grid-row: 3 / 4; }
  .collage--7-items .collage__item:nth-child(7) { grid-column: 3 / 5; grid-row: 3 / 4; }

  /* --- Responsive Stacking --- */
  @media screen and (max-width: 749px) {
    .collage-{{ section.id }} {
      grid-template-columns: 1fr 1fr;
    }
    .collage--1-items .collage__item,
    .collage--2-items .collage__item,
    .collage--3-items .collage__item,
    .collage--4-items .collage__item,
    .collage--5-items .collage__item,
    .collage--6-items .collage__item,
    .collage--7-items .collage__item {
      grid-column: span 1 !important;
      grid-row: span 1 !important;
    }
    .collage--1-items .collage__item:first-child,
    .collage--3-items .collage__item:first-child,
    .collage--5-items .collage__item:first-child,
    .collage--7-items .collage__item:first-child {
      grid-column: span 2 !important;
    }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.background_color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- liquid
      assign block_count = section.blocks.size
      assign skip_card_product_styles = false
    -%}

    <div class="collage collage-{{ section.id }} collage--{{ block_count }}-items">
      {%- for block in section.blocks -%}
        <div
          class="collage__item collage__item--{{ block.type }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="collage-card color-{{ section.settings.card_color_scheme }} gradient">
            {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
            {%- case block.type -%}
              {%- when 'product' -%}
                {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                {% render 'card-product',
                  card_product: block.settings.product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: block.settings.second_image,
                  show_price: false,
                  placeholder_image: placeholder_image,
                  skip_styles: skip_card_product_styles,
                  card_color_scheme: 'none'
                %}
                {% assign skip_card_product_styles = true %}

              {%- when 'collection' -%}
                {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                {% render 'card-collection',
                  card_collection: block.settings.collection,
                  media_aspect_ratio: 'adapt',
                  columns: 2,
                  placeholder_image: placeholder_image,
                  card_color_scheme: 'none'
                %}
            {%- endcase -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Advanced Collage",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Collage",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "header",
      "content": "Colors & Style"
    },
    {
      "type": "color_scheme",
      "id": "background_color_scheme",
      "label": "Section background",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Card background",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "card_shadow",
      "label": "Card Box Shadow",
      "default": "0 8px 20px rgba(0, 0, 0, 0.07)",
      "info": "Use standard CSS box-shadow format."
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "second_image",
          "default": false,
          "label": "Show second image on hover"
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 7,
  "presets": [
    {
      "name": "Advanced Collage",
      "blocks": [
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
