{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }

  /* --- Core Grid Setup --- */
  .collage-wrapper-title {
    margin-bottom: 3rem;
  }

  .collage-{{ section.id }} {
    display: grid;
    /* Use a 12-column grid for maximum layout flexibility */
    grid-template-columns: repeat(12, 1fr);
    /* Rows have a minimum height, but grow with content */
    grid-auto-rows: minmax(280px, auto);
    gap: {{ section.settings.spacing | default: 20 }}px;
  }

  /* --- The Grid Cell Container --- */
  .collage__item {
    /* This is the key: Flexbox centering handles the "white space" */
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    width: 100%;
    position: relative;
    transition: transform 0.3s ease;
  }

  .collage__item:hover {
    transform: translateY(-5px);
    z-index: 2;
  }

  /* --- The Card Wrapper inside the cell --- */
  .collage-card {
    /* Ensure the card doesn't exceed its grid cell bounds */
    max-width: 100%;
    max-height: 100%;
    width: 100%; /* Try to fill width */

    /* Optional: Add a slight constraint so super-tall/wide images don't look crazy */
    /* aspect-ratio: 4 / 5;  <- Uncomment if you want to force a portrait ratio container */

    border-radius: 12px;
    overflow: hidden;
    box-shadow: {{ section.settings.card_shadow }};
    background: #fff; /* Ensure card has a background if padding exists */
  }

  /* --- Card Component Overrides (Neutralizing theme styles) --- */
  .collage-card .card-wrapper {
     height: 100%;
  }
  .collage-card .card {
    height: 100%;
    border: none !important;
    box-shadow: none !important;
  }
  .collage-card .card__inner {
    border: none !important;
    box-shadow: none !important;
  }
  .collage-card .card__content {
      padding: 15px;
      text-align: center;
  }
  .collage-card .card__information {
    padding-top: 0;
  }


  /* =========================================
     LAYOUT DEFINITIONS (Using 12-col spans)
     ========================================= */

  /* --- 1 Item --- */
  .collage--1-items .collage__item { grid-column: span 12; grid-row: span 2; }

  /* --- 2 Items --- */
  .collage--2-items .collage__item { grid-column: span 6; grid-row: span 2; }

  /* --- 3 Items --- */
  .collage--3-items .collage__item { grid-column: span 4; grid-row: span 2; }

  /* --- 4 Items --- */
  .collage--4-items .collage__item { grid-column: span 6; grid-row: span 2; }

  /* --- 5 Items (Hero Left, 2x2 Right) --- */
  .collage--5-items .collage__item:nth-child(1) { grid-column: span 6; grid-row: span 2; } /* Hero Left */
  .collage--5-items .collage__item:nth-child(2),
  .collage--5-items .collage__item:nth-child(3),
  .collage--5-items .collage__item:nth-child(4),
  .collage--5-items .collage__item:nth-child(5) { grid-column: span 3; grid-row: span 1; } /* Small grid items */


  /* --- 6 Items (Asymmetrical Layout) --- */
  /*
     Row 1: [ Tall (3col) ] [ Big Center (6col) ] [ Top Right (3col) ]
     Row 2: [ Tall (cont) ] [ Big Center (cont) ] [ Mid Right (3col) ]
     Row 3: [ Bot Left (3col)] [ Wide Bottom Right (9col)          ]
  */
  .collage--6-items { grid-auto-rows: minmax(220px, auto); /* Slightly shorter rows for dense 6-item layout */ }
  .collage--6-items .collage__item:nth-child(1) { grid-column: span 3; grid-row: span 2; } /* Tall Left */
  .collage--6-items .collage__item:nth-child(3) { grid-column: span 6; grid-row: span 2; } /* Big Center */
  .collage--6-items .collage__item:nth-child(4) { grid-column: span 3; grid-row: span 1; } /* Top Right */
  .collage--6-items .collage__item:nth-child(5) { grid-column: span 3; grid-row: span 1; grid-column-start: 10; } /* Mid Right (forced start) */
  .collage--6-items .collage__item:nth-child(2) { grid-column: span 3; grid-row: span 1; grid-row-start: 3; } /* Bottom Left */
  .collage--6-items .collage__item:nth-child(6) { grid-column: span 9; grid-row: span 1; grid-row-start: 3; } /* Wide Bottom Right */


  /* --- 7 Items (Hero + 6 grid) --- */
  .collage--7-items .collage__item:nth-child(1) { grid-column: span 12; grid-row: span 2; } /* Big Hero Top */
  .collage--7-items .collage__item:not(:first-child) { grid-column: span 4; grid-row: span 1; } /* 3x2 grid below */


  /* =========================================
     RESPONSIVE
     ========================================= */

  /* Tablet (e.g., 2 columns) */
  @media screen and (max-width: 990px) {
     .collage-{{ section.id }} { grid-template-columns: repeat(2, 1fr); }

     /* Reset all spans to simple 1x1 on tablet for stability */
     [class*="collage--"] .collage__item { grid-column: span 1 !important; grid-row: span 1 !important; }

     /* Optional: make first item bigger on odd counts */
     .collage--1-items .collage__item,
     .collage--3-items .collage__item:first-child,
     .collage--5-items .collage__item:first-child,
     .collage--7-items .collage__item:first-child { grid-column: span 2 !important; }
  }

  /* Mobile (1 column stack) */
  @media screen and (max-width: 749px) {
    .collage-{{ section.id }} { grid-template-columns: 1fr; gap: 15px; }
    [class*="collage--"] .collage__item { grid-column: span 1 !important; grid-row: span 1 !important; }
    /* Ensure cards have enough height on mobile */
    .collage-card { min-height: 350px; }
  }
{%- endstyle -%}

<div class="color-{{ section.settings.background_color_scheme }} gradient isolate">
  <div class="page-width section-{{ section.id }}-padding">
    {%- if section.settings.heading != blank -%}
      <h2 class="collage-wrapper-title inline-richtext {{ section.settings.heading_size }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}">
        {{ section.settings.heading }}
      </h2>
    {%- endif -%}

    {%- liquid
      assign block_count = section.blocks.size
      assign skip_card_product_styles = false
    -%}

    <div class="collage collage-{{ section.id }} collage--{{ block_count }}-items">
      {%- for block in section.blocks -%}
        <div
          class="collage__item collage__item--{{ block.type }}{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
          {{ block.shopify_attributes }}
          {% if settings.animations_reveal_on_scroll %}
            data-cascade
            style="--animation-order: {{ forloop.index }};"
          {% endif %}
        >
          <div class="collage-card color-{{ section.settings.card_color_scheme }} gradient">
            {%- assign placeholder_image_index = forloop.index0 | modulo: 4 | plus: 1 -%}
            {%- case block.type -%}
              {%- when 'product' -%}
                {%- assign placeholder_image = 'product-apparel-' | append: placeholder_image_index -%}
                {% render 'card-product',
                  card_product: block.settings.product,
                  media_aspect_ratio: 'adapt',
                  show_secondary_image: block.settings.second_image,
                  show_price: false,
                  placeholder_image: placeholder_image,
                  skip_styles: skip_card_product_styles,
                  card_color_scheme: 'none'
                %}
                {% assign skip_card_product_styles = true %}

              {%- when 'collection' -%}
                {%- assign placeholder_image = 'collection-apparel-' | append: placeholder_image_index -%}
                {% render 'card-collection',
                  card_collection: block.settings.collection,
                  media_aspect_ratio: 'adapt',
                  columns: 2,
                  placeholder_image: placeholder_image,
                  card_color_scheme: 'none'
                %}
            {%- endcase -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Advanced Collage",
  "tag": "section",
  "class": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Collage",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        { "value": "h2", "label": "Small" },
        { "value": "h1", "label": "Medium" },
        { "value": "h0", "label": "Large" }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "header",
      "content": "Colors & Style"
    },
    {
      "type": "color_scheme",
      "id": "background_color_scheme",
      "label": "Section background",
      "default": "scheme-1"
    },
    {
      "type": "color_scheme",
      "id": "card_color_scheme",
      "label": "Card background",
      "default": "scheme-2"
    },
    {
      "type": "text",
      "id": "card_shadow",
      "label": "Card Box Shadow",
      "default": "0 8px 20px rgba(0, 0, 0, 0.07)",
      "info": "Use standard CSS box-shadow format."
    },
    {
      "type": "header",
      "content": "Section Padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Top padding",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Bottom padding",
      "default": 36
    }
  ],
  "blocks": [
    {
      "type": "product",
      "name": "Product",
      "settings": [
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        },
        {
          "type": "checkbox",
          "id": "second_image",
          "default": false,
          "label": "Show second image on hover"
        }
      ]
    },
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        }
      ]
    }
  ],
  "max_blocks": 7,
  "presets": [
    {
      "name": "Advanced Collage",
      "blocks": [
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" },
        { "type": "product" },
        { "type": "collection" }
      ]
    }
  ]
}
{% endschema %}
