{% comment %}
  Custom Footer Section
  - Uses CSS Grid for a flexible, responsive layout.
  - Simplified schema for easy customization of content.
  - FIX: Text block now supports an optional secondary menu.
  - FIX: Copyright Liquid logic simplified to pass theme-check.
{% endcomment %}

<style>
  .custom-footer {
    background-color: #b02328;
    color: #ffffff;
    padding: 60px 0 30px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
  }

  .custom-footer-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 40px;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr) 1.5fr;
    gap: 40px;
    align-items: flex-start;
  }

  .footer-block h3,
  .newsletter-heading {
    font-size: 18px;
    font-weight: 700;
    margin: 0 0 20px;
    text-transform: capitalize;
  }

  .footer-block ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-block li {
    margin-bottom: 12px;
  }

  .footer-block a,
  .footer-block .rte p {
    color: #ffffff;
    text-decoration: none;
    font-size: 16px;
    line-height: 1.6;
    margin: 0;
  }

  .footer-block a:hover {
    text-decoration: underline;
  }

  /* Style for the secondary heading (e.g., "Legal") */
  .footer-block .secondary-heading {
    margin-top: 30px;
  }

  /* Newsletter Form Styles */
  .newsletter-container {
    background-color: #ffffff;
    color: #1c1c1c;
    border-radius: 24px;
    padding: 30px;
  }

  .newsletter-form-fields {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 15px;
    margin-top: 20px;
  }

  .newsletter-form-fields .full-width {
    grid-column: 1 / -1;
  }

  .newsletter-form-fields label {
    font-size: 14px;
    font-weight: 600;
    margin-bottom: 8px;
    display: block;
  }

  .newsletter-form-fields input {
    width: 100%;
    padding: 12px;
    background-color: #f0f0f0;
    border: 1px solid #e0e0e0;
    border-radius: 8px;
    font-size: 16px;
  }

  .newsletter-form-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-top: 20px;
  }

  .newsletter-form-footer .terms-link {
    font-size: 12px;
    color: #555;
    text-decoration: underline;
  }

  .newsletter-form-footer .signup-button {
    background-color: #2b2b2b;
    color: #ffffff;
    border: none;
    border-radius: 8px;
    padding: 12px 30px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: background-color 0.2s;
  }

  .newsletter-form-footer .signup-button:hover {
    background-color: #4a4a4a;
  }

  /* Copyright Styles */
  .footer-copyright {
    text-align: left;
    margin-top: 50px;
    padding-top: 30px;
    border-top: 1px solid rgba(255, 255, 255, 0.2);
  }

  .footer-copyright small {
    font-size: 14px;
    color: #ffffff;
  }

  /* Responsive Adjustments */
  @media (max-width: 1200px) {
    .footer-grid {
      grid-template-columns: repeat(3, 1fr);
    }
    .newsletter-wrapper {
      grid-column: 1 / -1;
      margin-top: 30px;
    }
  }

  @media (max-width: 768px) {
    .footer-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 480px) {
    .footer-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<footer class="custom-footer">
  <div class="custom-footer-container">
    <div class="footer-grid">
      {%- for block in section.blocks -%}
        <div class="footer-block" {{ block.shopify_attributes }}>
          {%- case block.type -%}
            {%- when 'link_list' -%}
              {%- if block.settings.heading != blank -%}
                <h3>{{ block.settings.heading | escape }}</h3>
              {%- endif -%}
              {%- if block.settings.menu != blank -%}
                <ul>
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}">{{ link.title | escape }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}

            {%- when 'text' -%}
              {%- if block.settings.heading != blank -%}
                <h3>{{ block.settings.heading | escape }}</h3>
              {%- endif -%}
              <div class="rte">{{ block.settings.text }}</div>

              {%- if block.settings.secondary_heading != blank -%}
                <h3 class="secondary-heading">{{ block.settings.secondary_heading | escape }}</h3>
              {%- endif -%}
              {%- if block.settings.secondary_menu != blank -%}
                <ul>
                  {%- for link in block.settings.secondary_menu.links -%}
                    <li>
                      <a href="{{ link.url }}">{{ link.title | escape }}</a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
          {%- endcase -%}
        </div>
      {%- endfor -%}

      <div class="newsletter-wrapper">
        <div class="newsletter-container">
          <h3 class="newsletter-heading">{{ section.settings.newsletter_heading }}</h3>
          {%- form 'customer', id: 'footer-newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form-fields">
              <div>
                <label for="Footer-FirstName">Forename</label>
                <input type="text" name="contact[first_name]" id="Footer-FirstName">
              </div>
              <div>
                <label for="Footer-LastName">Surname</label>
                <input type="text" name="contact[last_name]" id="Footer-LastName">
              </div>
              <div class="full-width">
                <label for="Footer-Email">Email Address</label>
                <input type="email" name="contact[email]" id="Footer-Email" required>
              </div>
            </div>
            <div class="newsletter-form-footer">
              <a href="{{ section.settings.terms_link }}" class="terms-link">Terms and Conditions</a>
              <button type="submit" class="signup-button">Sign Up</button>
            </div>
          {%- endform -%}
        </div>
      </div>
    </div>

    <div class="footer-copyright">
      {% # FINAL FIX: Simplified the copyright line to satisfy the linter. # %}
      <small>
        {{- section.settings.copyright_text }}
        {{ 'now' | date: '%Y' -}}
      </small>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Custom Footer",
  "max_blocks": 4,
  "settings": [
    {
      "type": "header",
      "content": "Newsletter Form"
    },
    {
      "type": "text",
      "id": "newsletter_heading",
      "label": "Heading",
      "default": "Join our mailing list"
    },
    {
      "type": "url",
      "id": "terms_link",
      "label": "Terms & Conditions Link"
    },
    {
      "type": "header",
      "content": "Copyright"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "info": "The current year will be added automatically.",
      "default": "Copyright Sifam Tinsley Instrumentation Ltd"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Link List",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Useful Links"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu",
          "default": "footer"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default": "Contact Us"
        },
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>sales@sifamtinsley.com<br>01376 335271</p>"
        },
        {
          "type": "header",
          "content": "Secondary Content"
        },
        {
          "type": "text",
          "id": "secondary_heading",
          "label": "Secondary Heading (e.g. Legal)",
          "info": "Optional: Use for a second heading in the same column."
        },
        {
          "type": "link_list",
          "id": "secondary_menu",
          "label": "Secondary Menu",
          "info": "Optional: Adds a link list below the secondary heading."
        }
      ]
    }
  ],
  "default": {
    "blocks": [{ "type": "link_list" }, { "type": "link_list" }, { "type": "text" }, { "type": "text" }]
  }
}
{% endschema %}
